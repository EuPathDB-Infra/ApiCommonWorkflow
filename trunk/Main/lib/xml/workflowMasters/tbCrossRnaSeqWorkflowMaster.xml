<workflowGraph name="tbCrossRnaSeq">
    <param name="parentDataDir"/>
    <param name="organismResourceXmlFile"/>
    <param name="ssaGeneModelFile"/>
    <param name="genomicSeqsFileForSsa"/>
    <param name="transcriptSeqsFileForSsa"/>
    <param name="downloadSiteTranscriptExpressionDataDir"/>
    <param name="genomeExtDbRlsSpec"/>
    <param name="samHeaderFile"/>

    <constant name="dataDir">$$parentDataDir$$/tbCrossRnaSeq</constant>
    <constant name="samplesDataDir">$$dataDir$$/samples</constant>
    <constant name="seqCoverageAndIntensityDataDir">$$dataDir$$/seqCoverageAndIntensity</constant>

    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="makeSeqCoverageAndIntensityDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makeSamplesDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$samplesDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="Tbrucei_RNASeq_George_Cross_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Tbrucei_RNASeq_George_Cross_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <step name="mirrorToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="Tbrucei_RNASeq_George_Cross_RSRC"/>
    </step>

   <templateInstance name="PF_WT" xmlFile="organismRnaSeqWorkflowTemplate.xml" rtcFile="tritrypdb.rtc"/>

   <templateInstance name="BF_All" xmlFile="organismRnaSeqWorkflowTemplate.xml" rtcFile="tritrypdb.rtc"/>

    <step name="mergeMinIntensityFiles" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MergeIntensityFiles">
      <paramValue name="inputFilesDir">$$samplesDataDir$$</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/minProfiles.txt</paramValue>
      <paramValue name="profileElementOrder">PF_WT.int.min,BF_All.int.min</paramValue>
      <depends name="makeSeqCoverageAndIntensityDataDir"/>
      <depends name="analyzePF_WTSample"/>
      <depends name="analyzeBF_AllSample"/>
    </step>

    <step name="mergeMaxIntensityFiles" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MergeIntensityFiles">
      <paramValue name="inputFilesDir">$$samplesDataDir$$</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/maxProfiles.txt</paramValue>
      <paramValue name="profileElementOrder">PF_WT.int.max,BF_All.int.max</paramValue>
      <depends name="makeSeqCoverageAndIntensityDataDir"/>
      <depends name="analyzePF_WTSample"/>
      <depends name="analyzeBF_AllSample"/>
    </step>

    <step name="makeMinPercentileProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakePercentileProfile">
      <paramValue name="inputFile">$$seqCoverageAndIntensityDataDir$$/minProfiles.txt</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/minProfiles.txt.pct</paramValue>
      <paramValue name="ties">min</paramValue>
      <paramValue name="hasHeader">true</paramValue>
      <depends name="mergeMinIntensityFiles"/>
    </step>

    <step name="makeMaxPercentileProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakePercentileProfile">
      <paramValue name="inputFile">$$seqCoverageAndIntensityDataDir$$/maxProfiles.txt</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/maxProfiles.txt.pct</paramValue>
      <paramValue name="ties">min</paramValue>
      <paramValue name="hasHeader">true</paramValue>
      <depends name="mergeMaxIntensityFiles"/>
    </step>

    <step name="makeDiffProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeProfileDiff">
      <paramValue name="maxInputFile">$$seqCoverageAndIntensityDataDir$$/maxProfiles.txt</paramValue>
      <paramValue name="minInputFile">$$seqCoverageAndIntensityDataDir$$/minProfiles.txt</paramValue>     
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/diffProfiles.txt</paramValue>
      <paramValue name="hasHeader">true</paramValue>
      <depends name="mergeMinIntensityFiles"/>
      <depends name="mergeMaxIntensityFiles"/>
    </step>

     <step name="loadIntensityProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertExpressionProfiles" stepLoadTypes="plugin">
      <paramValue name="configFile">$$dataDir$$/Tbrucei_RNASeq_George_Cross_RSRC/final/config.txt</paramValue>
      <paramValue name="inputDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <paramValue name="extDbRlsSpec">Tbrucei_RNASeq_George_Cross_RSRC|@@Tbrucei_RNASeq_George_Cross_VER@@</paramValue>
      <depends name="mergeMinIntensityFiles"/>
      <depends name="makeMinPercentileProfile"/>
      <depends name="makeDiffProfile"/>
    </step>

    <step name="copyExpressionProfilesToDownloadDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CopyExpressionProfilesToDownloadDir">
      <paramValue name="copyFromDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <paramValue name="configFile">$$dataDir$$/Tbrucei_RNASeq_George_Cross_RSRC/final/config.txt</paramValue>
      <paramValue name="copyToDir">$$downloadSiteTranscriptExpressionDataDir$$</paramValue>
      <depends name="mergeMinIntensityFiles"/>
      <depends name="mergeMaxIntensityFiles"/>
    </step>


</workflowGraph>

