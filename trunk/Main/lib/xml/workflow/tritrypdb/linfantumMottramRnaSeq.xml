<workflowGraph name="linfantumMottramRnaSeq">
    <param name="parentDataDir"/>
    <param name="organismResourceXmlFile"/>
    <param name="ssaGeneModelFile"/>
    <param name="genomicSeqsFileForSsa"/>
    <param name="transcriptSeqsFileForSsa"/>
    <param name="downloadSiteTranscriptExpressionDataDir"/>
    <param name="genomeExtDbRlsSpec"/>

    <constant name="dataDir">$$parentDataDir$$/linfantumMottramRnaSeq</constant>
    <constant name="samplesDataDir">$$dataDir$$/samples</constant>
    <constant name="seqCoverageAndIntensityDataDir">$$dataDir$$/seqCoverageAndIntensity</constant>

    <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="makeSeqCoverageAndIntensityDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makeSamplesDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$samplesDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="Linfantum_RNASeq_Mottram_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Linfantum_RNASeq_Mottram_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="Linfantum_RNASeq_Mottram_RSRC"/>
    </step>

    <subgraph name="analyzeMottramRNASeq" xmlFile="analyzeRnaSeqOrChipSeqSample_modify.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">MottramRNASeq</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/Linfantum_RNASeq_Mottram_RSRC/final/Mottram_LinfJPCM5_rna-seq.fastq</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/analyzeMottramRNASeq/MottramRNASeq.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/MottramRNASeq.int</paramValue>
      <paramValue name="makeIntensityFile">false</paramValue>     
      <paramValue name="rnaSeqExtDbRlsSpec">Linfantum_RNASeq_Mottram_RSRC|@@Linfantum_RNASeq_Mottram_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="pairedReadFilePath"></paramValue>
      <paramValue name="numInsertions">1</paramValue>
      <paramValue name="limitNU">14</paramValue>
      <paramValue name="SNPs">false</paramValue>
      <paramValue name="strandSpecific">false</paramValue>
      <paramValue name="variableLengthReads">false</paramValue>
      <depends name="mirrorToCluster"/>
    </subgraph>

</workflowGraph>
