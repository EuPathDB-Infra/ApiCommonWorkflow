<workflowGraph name="">
    <param name="projectName"/>
    <param name="organismAbbrev"/>
    <param name="experimentName"/>
    <param name="parentDataDir"/>
    <param name="organismResourceXmlFile"/>
    <param name="geneModelFileForSsa"/>
    <param name="genomicSeqsFileForSsa"/>
    <param name="transcriptSeqsFileForSsa"/>
    <param name="relativeDownloadSiteDir"/>
    <param name="genomeExtDbRlsSpec"/>
    <param name="experimentResourceName"/>
    <param name="experimentResourceVersion"/>
    <param name="strandSpecific"/>
    <param name="variableLengthReads"/>
    <param name="hasPairedEnds"/>
    <param name="hasOnlyOneSample"/>
    <param name="limitNU"/>
    <param name="numInsertions"/>

    <constant name="dataDir">$$parentDataDir$$/$$experimentName$$</constant>

    <constant name="samplesOutputDir">$$dataDir$$/samplesOutput</constant>

    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="makeSamplesOutputDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$samplesOutputDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="experiment_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$experimentResourceName$$</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <step name="mirrorToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeSamplesOutputDir"/>
      <depends name="experiment_RSRC"/>
    </step>

    <subgraph name="analyzeSamples" xmlFile="$$projectName$$/$$organismAbbrev$$/$$experimentName$$/rnaSeqSamples.xml">
      <paramValue name="experimentDataDir">$$dataDir$$</paramValue>
      <paramValue name="outputDir">$$samplesOutputDir$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="geneModelFileForSsa">$$geneModelFileForSsa$$</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="projectName">$$projectName$$</paramValue>
      <paramValue name="experimentResourceName">$$experimentResourceName$$</paramValue>
      <paramValue name="experimentResourceVersion">$$experimentResourceVersion$$</paramValue>
      <paramValue name="relativeDownloadSiteDir">$$relativeDownloadSiteDir$$</paramValue>
      <paramValue name="limitNU">$$limitNU$$</paramValue>
      <paramValue name="variableLengthReads">$$variableLengthReads$$</paramValue>
      <paramValue name="strandSpecific">$$strandSpecific$$</paramValue>
      <paramValue name="numInsertions">$$numInsertions$$</paramValue>
      <paramValue name="hasPairedEnds">$$hasPairedEnds$$></paramValue>
      <depends name="mirrorToCluster"/>
    </subgraph>

    <step name="doTranscriptExpression" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::DoTranscriptExpression">
      <paramValue name="analysisConfigFile">$$parentDataDir$$/$$experimentName$$/$$experimentResourceName$$/final/analysisConfig.xml</paramValue>
      <paramValue name="inputDir">$$samplesOutputDir$$</paramValue>
      <paramValue name="outputDir">$$dataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="geneProbeMappingTabFile"></paramValue>
      <paramValue name="geneProbeMappingVendorFile"></paramValue>
      <paramValue name="expectCdfFile">false</paramValue>
      <paramValue name="expectNdfFile">false</paramValue>
      <depends name="analyzeSamples"/>
    </step>

    <step name="loadIntensityProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertExpressionProfiles" excludeIf="$$hasOnlyOneSample$$" stepLoadTypes="plugin">
      <paramValue name="configFile">$$dataDir$$/doTranscriptExpression/expression_profile_config.txt</paramValue>
      <paramValue name="inputDir">$$dataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="extDbRlsSpec">$$experimentResourceName$$|$$experimentResourceVersion$$</paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

    <step name="copyExpressionProfilesToDownloadDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CopyExpressionProfilesToDownloadDir" excludeIf="$$hasOnlyOneSample$$">
      <paramValue name="configFile">$$dataDir$$/doTranscriptExpression/expression_profile_config.txt</paramValue>
      <paramValue name="copyFromDir">$$dataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="relativeDir">$$relativeDownloadSiteDir$$</paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

    <step name="loadAnalysisResult" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertSimpleRadAnalysisFromConfig" excludeIf="$$hasOnlyOneSample$$" stepLoadTypes="plugin">
      <paramValue name="analysisWorkingDir">$$dataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="configFile">$$dataDir$$/doTranscriptExpression/analysis_result_config.txt</paramValue>
      <paramValue name="analysisResultView">DifferentialExpression</paramValue>
      <paramValue name="naFeatureView">GeneFeature</paramValue>
      <paramValue name="useSqlLdr">false</paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

</workflowGraph>
