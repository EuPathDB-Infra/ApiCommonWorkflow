<workflowGraph name="getAndMapProbes">
    <param name="dataDir"/>
    <param name="probeSetName"/>
    <param name="probeDatasetName"/>
    <param name="probeDatasetVersion"/>
    <param name="organismDatasetLoaderXmlFile"/>
    <param name="projectName"/>
    <param name="indexDir"/> 
    <param name="organismAbbrev"/>
    <param name="hasPairedEnds"/>
    <param name="isColorspace"/>
    <param name="removePCRDuplicates"/> 
    <param name="extraBowtieParams"/> 

    <!-- We be able to use dataDir directly without clobbering instead of making a subdir- not sure until we run in test mode -->
    <constant name="platformDir">$$dataDir$$/$$probeSetName$$</constant>

    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$platformDir$$</paramValue>
    </step>

    <subgraph name="probe_RSRC" xmlFile="loadDataset.xml">
      <paramValue name="datasetName">$$probeDatasetName$$</paramValue>
      <paramValue name="datasetLoaderXmlFileName">$$organismDatasetLoaderXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$platformDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <step name="loadReporter" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertPlatformReporter">
      <paramValue name="fastaFile">$$platformDir$$/$$probeDatasetName$$/final/probes.fsa</paramValue><!-- not sure this is correct-->
      <paramValue name="extDbRlsSpec">$$probeDatasetName$$|$$probeDatasetVersion$$</paramValue>
      <paramValue name="platformName">$$probeSetName$$</paramValue>
      <depends name="probe_RSRC"/>
    </step>

    <step name="mirrorToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$platformDir$$</paramValue>
      <depends name="probe_RSRC"/>
    </step>

<!-- REPLACES RUM MAPPING GRAPH-->
    <subgraph name="runBowtie" xmlFile="runBowtie.xml">
      <paramValue name="projectName">$$projectName$$</paramValue>
      <paramValue name="experimentDataDir">$$experimentDataDir$$</paramValue>
      <paramValue name="readsFile">$$platformDir$$/$$probeDatasetName$$/final/probes.fsa</paramValue>
      <paramValue name="pairedReadsFile"></paramValue>
      <paramValue name="sampleName">$$probeSetName$$</paramValue>
      <paramValue name="indexDir">$$indexDir$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="hasPairedEnds">$$hasPairedEnds$$</paramValue>
      <paramValue name="isColorspace">$$isColorspace$$</paramValue>
      <paramValue name="removePCRDuplicates">$$removePCRDuplicates$$</paramValue>
      <paramValue name="extraBowtieParams">$$extraBowtieParams$$</paramValue>
      <depends name="mirrorToCluster"/>
    </subgraph>

<!-- Parse BAM file directly in plugin below -->

<!--LOAD DIRECTLY FROM BAM FILE HERE -->
<!-- Load in to Platform.ReporterSet, Platform.Reporter and Platform.ReporterLocation table directly from bam file- will need new plugin -->


    <step name="document-getAndMapProbes"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">getAndMapProbes_MTHD</paramValue>
      <paramValue name="version">1.0</paramValue>
      <paramValue name="parameters">TODO: patch in later</paramValue>
    </step>

</workflowGraph>
