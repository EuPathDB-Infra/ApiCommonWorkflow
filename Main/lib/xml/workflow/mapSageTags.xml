<workflowGraph name="mapSageTags">

    <param name="parentDataDir"/>
    <param name="genomicSeqsFile"/>
    <param name="sageTagExtDbRlsSpec"/>
    <param name="sequencePrefix"/>
    <param name="bowtieParams"/>
    <param name="name"/>

    <constant name="dataDir">$$parentDataDir$$/sageTags_$$name$$</constant>

    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="extractSageTags" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractSageTags">
      <paramValue name="sageTagExtDbRlsSpec">$$sageTagExtDbRlsSpec$$</paramValue>
      <paramValue name="prependSeq">$$sequencePrefix$$</paramValue>
      <paramValue name="outputFile">$$dataDir$$/sageTags.fsa</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="createBowtieIndices" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CreateBowtieIndexes">
      <paramValue name="inputFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="outputIndexDir">$$dataDir$$/indexes</paramValue>
      <paramValue name="colorspace">false</paramValue>
      <depends name="extractSageTags"/>
    </step>

    <step name="runBowtie" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::SsaRunBowtie">
      <paramValue name="isPairedEnds">false</paramValue>
      <paramValue name="haveQuals">false</paramValue>
      <paramValue name="inputFwdSeqsFile">$$dataDir$$/sageTags.fsa</paramValue>
      <paramValue name="inputFwdQualsFile"></paramValue>
      <paramValue name="inputRevSeqsFile"></paramValue>
      <paramValue name="inputRevQualsFile"></paramValue>
      <paramValue name="seqsFileType">FASTA</paramValue>
      <paramValue name="inputIndexesDir">$$dataDir$$/indexes</paramValue>
      <paramValue name="outputFile">$$dataDir$$/bowtieOutputFile.out</paramValue>
      <paramValue name="bowtieParams">$$bowtieParams$$</paramValue>
      <paramValue name="isColorSpace">false</paramValue>
      <depends name="createBowtieIndices"/>
      <depends name="extractSageTags"/>
    </step>

    <step name="document-map_sage_tags"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">map_sage_tags_MTHD</paramValue>
      <paramValue name="version">1.0</paramValue>
      <paramValue name="parameters">$$bowtieParams$$</paramValue>
    </step>

    <step name="bowtie2TagToSeq" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::Bowtie2TagToSeq">
     <paramValue name="inputFile">$$dataDir$$/bowtieOutputFile.out</paramValue>
     <paramValue name="outputFile">$$dataDir$$/mapSageTagsToNaSequences.out</paramValue>
    <depends name="runBowtie"/>
  </step>

    <step name="loadSageTagMap" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::LoadExpressionFeature" stepLoadTypes="plugin">
      <paramValue name="inputFile">$$dataDir$$/mapSageTagsToNaSequences.out</paramValue>
      <paramValue name="extDbRlsSpec">RAD.SAGETag|continuous</paramValue>
      <paramValue name="featureType">SAGETagFeature</paramValue>
      <depends name="bowtie2TagToSeq"/>
    </step>


</workflowGraph>
