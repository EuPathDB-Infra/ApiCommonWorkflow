<workflowGraph name="lmajorLV39Cl5WashUSNPs">
    <param name="parentDataDir"/>
    <param name="organismResourceXmlFile"/>
    <param name="genomicSeqsFile"/>
    <param name="genomeExtDbRlsSpec"/>

    <constant name="dataDir">$$parentDataDir$$/lmajorLV39Cl5WashUSNPs</constant>
    <constant name="samplesDataDir">$$dataDir$$/samples</constant>

    <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="makeSamplesDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$samplesDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="createBWAIndices" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CreateBWAIndexes">
      <paramValue name="inputFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="outputIndexDir">$$dataDir$$/bwa_indices</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="Lmajor_LV39_cl5_SNPs_WashU_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Lmajor_LV39_cl5_SNPs_WashU_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <subgraph name="analyzeWashu_illuminaSamples" xmlFile="analyzeNGSSNPByBWA.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">washu_illumina</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/Lmajor_LV39_cl5_SNPs_WashU_RSRC/LmajorLV39cl5_1.fq</paramValue>
      <paramValue name="rnaSeqExtDbRlsSpec">Lmajor_LV39_cl5_SNPs_WashU_RSRC|@@Lmajor_LV39_cl5_SNPs_WashU_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="pairedReadFile">$$dataDir$$/Lmajor_LV39_cl5_SNPs_WashU_RSRC/LmajorLV39cl5_2.fq</paramValue>
      <paramValue name="reference_strain">Friedlin</paramValue>
      <paramValue name="SNP_strain">LV39cl5</paramValue>
      <paramValue name="BWAIndexDir">$$dataDir$$/bwa_indices</paramValue>
      <paramValue name="organismFullName">Leishmania major strain Friedlin</paramValue>
      <paramValue name="percentCutoff">20</paramValue>
      <paramValue name="minPercentCutoff">34</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="createBWAIndices"/>
      <depends name="Lmajor_LV39_cl5_SNPs_WashU_RSRC"/>
    </subgraph>

</workflowGraph>
