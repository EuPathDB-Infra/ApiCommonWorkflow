<workflowGraph name="">
    <param name="parentDataDir"/> 
    <param name="topLevelSeqSizeFile"/>
    <param name="organismAbbrev"/>
    <param name="relativeWebServicesDir"/>
    <param name="experimentDatasetName"/>
   
    <step name="makeGffBigWigFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeGffBigWigFile">
        <paramValue name="coverageFileDir">$$parentDataDir$$</paramValue>
        <paramValue name="chromSizesFile">$$topLevelSeqSizeFile$$</paramValue>
    </step>

    <step name="copyBigWigFilesToWebServiceDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CopyBigWigFilesToWebServices">
        <paramValue name="copyFromDir">$$parentDataDir$$</paramValue>
        <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
        <paramValue name="relativeDir">$$relativeWebServicesDir$$</paramValue>
        <paramValue name="experimentDatasetName">$$experimentDatasetName$$</paramValue>
        <depends name="makeGffBigWigFile"/>
    </step>
    
</workflowGraph>
