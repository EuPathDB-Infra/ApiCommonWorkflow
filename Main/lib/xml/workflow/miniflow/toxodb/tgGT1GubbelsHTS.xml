<workflowGraph name="tgGT1GubbelsHTS">
  <param name="parentDataDir"/>
  <param name="resourceXmlFileName"/>
  <param name="ssaGeneModelFile"/>
  <param name="genomicSeqsFileForSsa"/>
  <param name="transcriptSeqsFileForSsa"/>

  <constant name="dataDir">$$parentDataDir$$/tgGT1GubbelsHTS</constant>
  <constant name="samplesDataDir">$$dataDir$$/samples</constant>
  <constant name="seqCoverageAndIntensityDataDir">$$dataDir$$/seqCoverageAndIntensity</constant>
  <constant name="genomicSeqsFileForSsa">$$parentDataDir$$/tgGT1LoadGenome/genomicSeqsForSsa.fsa</constant>
  <constant name="transcriptSeqsFileForSsa">$$parentDataDir$$/tgGT1LoadGenome/transcriptSeqsForSsa.fsa</constant>
  <constant name="ssaGeneModelFile">$$parentDataDir$$/tgGT1LoadGenome/geneModelForSsa.txt</constant>
  <constant name="downloadSiteDataDir">@@downloadSiteDir@@/$$projectName$$/release-$$projectVersion$$/</constant> 


  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

    <step name="makeSeqCoverageAndIntensityDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makeSamplesDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$samplesDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="TgRH_HTS_Gubbels_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">TgRH_HTS_Gubbels_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$resourceXmlFileName$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
     </subgraph>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="TgRH_HTS_Gubbels_RSRC"/>
    </step>

    <subgraph name="analyzeLane5" xmlFile="analyzeRnaSeqOrChipSeqSample_modify.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">Lane5</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/TgRH_HTS_Gubbels_RSRC/final/PARENT-302WB_lane5_mate1.fq</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/analyzeLane5/Lane5.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/Lane5.int</paramValue>
      <paramValue name="makeIntensityFile">true</paramValue>     
      <paramValue name="rnaSeqExtDbRlsSpec">TgRH_HTS_Gubbels_RSRC|@@TgRH_HTS_Gubbels_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">T.gondii GT1 contigs from Genbank|@@Tgondii_GT1_contigs_from_Genbank_VER@@</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="pairedReadFilePath">$$dataDir$$/TgRH_HTS_Gubbels_RSRC/final/PARENT-302WB_lane5_mate2.fq</paramValue>
      <paramValue name="numInsertions">1</paramValue>
      <paramValue name="limitNU">30</paramValue>
      <paramValue name="SNPs">true</paramValue>
      <paramValue name="strandSpecific">false</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="TgRH_HTS_Gubbels_RSRC"/>
      <depends name="mirrorToCluster"/>
    </subgraph>

    <subgraph name="analyzeLane6" xmlFile="analyzeRnaSeqOrChipSeqSample_modify.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">Lane6</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/TgRH_HTS_Gubbels_RSRC/final/PARENT-302WB_lane6_mate1.fq</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/analyzeLane6/Lane6.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/Lane6.int</paramValue>
      <paramValue name="makeIntensityFile">true</paramValue>     
      <paramValue name="rnaSeqExtDbRlsSpec">TgRH_HTS_Gubbels_RSRC|@@TgRH_HTS_Gubbels_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">T.gondii GT1 contigs from Genbank|@@Tgondii_GT1_contigs_from_Genbank_VER@@</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="pairedReadFilePath">$$dataDir$$/TgRH_HTS_Gubbels_RSRC/final/PARENT-302WB_lane6_mate2.fq</paramValue>
      <paramValue name="numInsertions">1</paramValue>
      <paramValue name="limitNU">30</paramValue>
      <paramValue name="SNPs">true</paramValue>
      <paramValue name="strandSpecific">false</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="TgRH_HTS_Gubbels_RSRC"/>
      <depends name="mirrorToCluster"/>
    </subgraph>

</workflowGraph>
