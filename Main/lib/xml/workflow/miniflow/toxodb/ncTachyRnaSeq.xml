<workflowGraph name="ncTachyRnaSeq">
    <param name="parentDataDir"/>
    <param name="resourceXmlFileName"/>
    <param name="ssaGeneModelFile"/>
    <param name="genomicSeqsFileForSsa"/>
    <param name="transcriptSeqsFileForSsa"/>

    <constant name="dataDir">$$parentDataDir$$/ncTachyRnaSeq</constant>
    <constant name="samplesDataDir">$$dataDir$$/samples</constant>
    <constant name="seqCoverageAndIntensityDataDir">$$dataDir$$/seqCoverageAndIntensity</constant>

    <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="makeSeqCoverageAndIntensityDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makeSamplesDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$samplesDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="Nc_RNASeq_Tachyzoite_Reid_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Nc_RNASeq_Tachyzoite_Reid_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$resourceXmlFileName$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
     </subgraph>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeSamplesDataDir"/>
    </step>
 
    <subgraph name="analyzeDay3" xmlFile="analyzeRnaSeqOrChipSeqSample.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">day3</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/Nc_RNASeq_Tachyzoite_Reid_RSRC/day3_1.fastq</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/analyzeDay3/day3.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/day3.int</paramValue>
      <paramValue name="makeIntensityFile">true</paramValue>     
      <paramValue name="rnaSeqExtDbRlsSpec">Nc_RNASeq_Tachyzoite_Reid_RSRC|@@Nc_RNASeq_Tachyzoite_Reid_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">Sanger N. caninum chromosomes|@@Sanger_Ncaninum_chromosomes_VER@@</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="pairedReadFilePath">$$dataDir$$/Nc_RNASeq_Tachyzoite_Reid_RSRC/day3_2.fastq</paramValue>
      <paramValue name="numInsertions">1</paramValue>
      <paramValue name="limitNU">30</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="Nc_RNASeq_Tachyzoite_Reid_RSRC"/>
      <depends name="mirrorToCluster"/>
    </subgraph>

    <subgraph name="analyzeDay4" xmlFile="analyzeRnaSeqOrChipSeqSample.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">day4</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/Nc_RNASeq_Tachyzoite_Reid_RSRC/day4_1.fastq</paramValue>
      <paramValue name="pairedReadFilePath">$$dataDir$$/Nc_RNASeq_Tachyzoite_Reid_RSRC/day4_2.fastq</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/analyzeDay4/day4.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/day4.int</paramValue>
      <paramValue name="makeIntensityFile">true</paramValue>
      <paramValue name="rnaSeqExtDbRlsSpec">Nc_RNASeq_Tachyzoite_Reid_RSRC|@@Nc_RNASeq_Tachyzoite_Reid_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">Sanger N. caninum chromosomes|@@Sanger_Ncaninum_chromosomes_VER@@</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="limitNU">30</paramValue>
      <paramValue name="numInsertions">1</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="Nc_RNASeq_Tachyzoite_Reid_RSRC"/>
      <depends name="mirrorToCluster"/>
    </subgraph>

    <step name="mergeMinIntensityFiles" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MergeIntensityFiles">
      <paramValue name="inputFilesDir">$$samplesDataDir$$</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/minProfiles.txt</paramValue>
      <paramValue name="profileElementOrder">day3.int.min,day4.int.min</paramValue>
      <depends name="analyzeDay3"/>
      <depends name="analyzeDay4"/>
    </step>

    <step name="mergeMaxIntensityFiles" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MergeIntensityFiles">
      <paramValue name="inputFilesDir">$$samplesDataDir$$</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/maxProfiles.txt</paramValue>
      <paramValue name="profileElementOrder">day3.int.max,day4.int.max</paramValue>
      <depends name="analyzeDay3"/>
      <depends name="analyzeDay4"/>
    </step>

    <step name="makeMinPercentileProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakePercentileProfile">
      <paramValue name="inputFile">$$seqCoverageAndIntensityDataDir$$/minProfiles.txt</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/minPercents.txt</paramValue>
      <paramValue name="ties">min</paramValue>
      <paramValue name="hasHeader">true</paramValue>
      <depends name="mergeMinIntensityFiles"/>
    </step>

    <step name="makeMaxPercentileProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakePercentileProfile">
      <paramValue name="inputFile">$$seqCoverageAndIntensityDataDir$$/maxProfiles.txt</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/maxPercents.txt</paramValue>
      <paramValue name="ties">min</paramValue>
      <paramValue name="hasHeader">true</paramValue>
      <depends name="mergeMaxIntensityFiles"/>
    </step>

    <step name="makeDiffProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeProfileDiff">
      <paramValue name="maxInputFile">$$seqCoverageAndIntensityDataDir$$/maxProfiles.txt</paramValue>
      <paramValue name="minInputFile">$$seqCoverageAndIntensityDataDir$$/minProfiles.txt</paramValue>     
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/diffProfiles.txt</paramValue>
      <paramValue name="hasHeader">true</paramValue>
      <depends name="mergeMinIntensityFiles"/>
      <depends name="mergeMaxIntensityFiles"/>
    </step>

<step name="makeDiffPercentile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeProfileDiff">
      <paramValue name="maxInputFile">$$seqCoverageAndIntensityDataDir$$/maxPercents.txt</paramValue>
      <paramValue name="minInputFile">$$seqCoverageAndIntensityDataDir$$/minPercents.txt</paramValue>      
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/diffPercents.txt</paramValue>
      <paramValue name="hasHeader">true</paramValue>
      <depends name="makeMinPercentileProfile"/>
      <depends name="makeMaxPercentileProfile"/>
    </step>

    <step name="loadIntensityProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertExpressionProfiles" stepLoadTypes="plugin">
      <paramValue name="configFile">$$dataDir$$/Nc_RNASeq_Tachyzoite_Reid_RSRC/fromProvider/config.txt</paramValue>
      <paramValue name="inputDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <paramValue name="extDbRlsSpec">Nc_RNASeq_Tachyzoite_Reid_RSRC|@@Nc_RNASeq_Tachyzoite_Reid_VER@@</paramValue>
      <depends name="mergeMinIntensityFiles"/>
      <depends name="makeMinPercentileProfile"/>
      <depends name="makeDiffProfile"/>
      <depends name="makeDiffPercentile"/>
    </step>
<!--
    <step name="copyExpressionProfilesToDownloadDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CopyExpressionProfilesToDownloadDir">
      <paramValue name="copyFromDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <paramValue name="configFile">$$dataDir$$/Nc_RNASeq_Tachyzoite_Reid_RSRC/config.txt</paramValue>
      <paramValue name="copyToDir">$$downloadSiteTranscriptExpressionDataDir$$</paramValue>
      <depends name="mergeIntensityFiles"/>
    </step>
-->

</workflowGraph>
