<workflowGraph name="tgME49GubbelsHTS">
  <param name="projectName"/>
  <param name="projectVersion"/>
  <param name="parentDataDir"/>

  <constant name="dataDir">$$parentDataDir$$/tgME49GubbelsHTS</constant>
  <constant name="samplesDataDir">$$dataDir$$/samples</constant>
  <constant name="seqCoverageAndIntensityDataDir">$$dataDir$$/seqCoverageAndIntensity</constant>
  <constant name="genomicSeqsFile">$$parentDataDir$$/tgME49GenomicSeqs.fsa</constant>
  <constant name="BwaIndexDir">$$parentDataDir$$/tgME49GenomicSeqs_bwa_indices</constant>


  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

    <step name="makeSeqCoverageAndIntensityDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makeSamplesDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$samplesDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="analyzeME49GubbelsHTS" xmlFile="analyzeNGSSNPByBWA.xml">
       <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
       <paramValue name="sampleName">combined</paramValue>
       <paramValue name="shortSeqsFile">$$parentDataDir$$/TgRH_HTS_Gubbels_RSRC/final//PARENT-302WB_combined_mate1.fq</paramValue>
       <paramValue name="rnaSeqExtDbRlsSpec">TgRH_HTS_Gubbels_RSRC|@@TgRH_HTS_Gubbels_VER@@</paramValue>
       <paramValue name="genomeExtDbSpec">T.gondii ME49 contigs from Genbank|@@Tgondii_ME49_contigs_from_Genbank_VER@@</paramValue>
       <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
       <paramValue name="pairedReadFile">$$parentDataDir$$/TgRH_HTS_Gubbels_RSRC/final//PARENT-302WB_combined_mate2.fq</paramValue>
       <paramValue name="reference_strain">ME49</paramValue>
       <paramValue name="SNP_strain">RH</paramValue>
       <paramValue name="BWAIndexDir">$$BwaIndexDir$$</paramValue>
       <paramValue name="organismFullName">Toxoplasma gondii ME49</paramValue>
       <paramValue name="percentCutoff">80</paramValue>
       <paramValue name="minPercentCutoff">51</paramValue>
       <depends name="makeSamplesDataDir"/>
     </subgraph>


</workflowGraph>
