<workflowGraph name="RHncRNAToGT1GregoryRnaSeq">
    <param name="parentDataDir"/>
    <param name="resourceXmlFileName"/>
    <param name="ssaGeneModelFile"/>
    <param name="genomicSeqsFileForSsa"/>
    <param name="transcriptSeqsFileForSsa"/>

    <constant name="dataDir">$$parentDataDir$$/RHncRNAToGT1GregoryRnaSeq</constant>
    <constant name="samplesDataDir">$$dataDir$$/samples</constant>
    <constant name="seqCoverageAndIntensityDataDir">$$dataDir$$/seqCoverageAndIntensity</constant>

    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="makeSeqCoverageAndIntensityDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makeSamplesDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$samplesDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="TgRH_ncRNA_Gregory_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">TgRH_ncRNA_Gregory_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$resourceXmlFileName$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
     </subgraph>

     <step name="mirrorToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="TgRH_ncRNA_Gregory_RSRC"/>
    </step>
 
    <subgraph name="analyzeRHncRNA" xmlFile="analyzeRnaSeqOrChipSeqSample_modify.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">RHncRNA</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/TgRH_ncRNA_Gregory_RSRC/toxo_rh_smrna_040711.fq</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/analyzeRHncRNA/RHncRNA.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/RHncRNA.int</paramValue>
      <paramValue name="makeIntensityFile">true</paramValue>     
      <paramValue name="rnaSeqExtDbRlsSpec">TgRH_ncRNA_Gregory_RSRC|@@TgRH_ncRNA_Gregory_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">T.gondii GT1 contigs from Genbank|@@Tgondii_GT1_contigs_from_Genbank_VER@@</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="pairedReadFilePath"></paramValue>
      <paramValue name="numInsertions">1</paramValue>
      <paramValue name="limitNU">30</paramValue>
      <paramValue name="SNPs">false</paramValue>
      <paramValue name="strandSpecific">true</paramValue>
      <paramValue name="variableLengthReads">true</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="TgRH_ncRNA_Gregory_RSRC"/>
      <depends name="mirrorToCluster"/>
    </subgraph>

</workflowGraph>
