<workflowGraph name="">
    <param name="readsFilePath"/>
    <param name="readsFileBasename"/>
    <param name="hasPairedEnds"/>
    <param name="snpStrainAbbrev"/>

    <!-- mirror this sample's read files to cluster -->
    <step name="mirrorReadsToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$readsFilePath$$/$$readsFileBasename$$</paramValue>
    </step>

    <!-- Only mirror over the Paired file over if it expected -->
    <step name="mirrorPairedToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster" includeIf="$$hasPairedEnds$$">
      <paramValue name="fileOrDirToMirror">$$readsFilePath$$/$$snpStrainAbbrev$$.paired</paramValue>
    </step>

</workflowGraph>
