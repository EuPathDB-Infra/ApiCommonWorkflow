<workflowGraph name="psipredWorkflow">

    <param name="nrdbFileShortDefline"/>
    <param name="proteinsFile"/>
    <param name="parentDataDir"/>
    <param name="organismName"/>

    <constant name="dataDir">$$parentDataDir$$/psipred</constant>

    <constant name="psipredProteinsFile">$$dataDir$$/proteinsFixedIds.fsa</constant>
    <constant name="psipredNrdbFile">$$dataDir$$/nrdb.pfilt.fsa</constant>

    <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="runPfilt" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::RunPfilt">
      <paramValue name="inputFile">$$nrdbFileShortDefline$$</paramValue>
      <paramValue name="outputFile">$$psipredNrdbFile$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="fixProteinIds" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::FixProteinIdsForPsipred">
      <paramValue name="inputProteinsFile">$$proteinsFile$$</paramValue>
      <paramValue name="outputProteinsFile">$$psipredProteinsFile$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="createTaskDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakePsipredTaskDir">
      <paramValue name="taskInputDir">$$dataDir$$/input</paramValue>
      <paramValue name="proteinsFile">$$psipredProteinsFile$$</paramValue>
      <paramValue name="nrdbFile">$$psipredNrdbFile$$</paramValue>
      <depends name="runPfilt"/>
      <depends name="fixProteinIds"/>
    </step>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="createTaskDir"/>
    </step>

    <step name="runClusterTask" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::RunAndMonitorClusterTask" stepLoadTypes="cluster">
      <paramValue name="taskInputDir">$$dataDir$$/input</paramValue>
      <paramValue name="numNodes">20</paramValue>
      <paramValue name="processorsPerNode">2</paramValue>
      <depends name="mirrorToCluster"/>
    </step>

    <step name="mirrorFromCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorFromComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$/master</paramValue>
      <paramValue name="outputDir">$$dataDir$$/master/mainresult</paramValue>
      <paramValue name="outputFiles"></paramValue>
      <depends name="runClusterTask"/>
    </step>

    <step name="fixFileNames" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::FixPsipredFileNames">
      <paramValue name="inputDir">$$dataDir$$/master/mainresult</paramValue>
      <paramValue name="outputDir">$$dataDir$$/master/mainresult_fixed</paramValue>
      <depends name="mirrorFromCluster"/>
     </step>

    <step name="makeAlgInv" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeAlgInv" stepLoadTypes="loadBalanceOne,plugin">
      <paramValue name="algName">Psipred</paramValue>
      <paramValue name="algVersion">2.5</paramValue>
      <paramValue name="algDesc">Psipred method for protein secondary structure prediction</paramValue>
      <paramValue name="algResult">Secondary Structure prediction for all annotated proteins</paramValue>
      <depends name="fixFileNames"/>
    </step>

    <step name="insertPsipred" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::LoadSecondaryStructures" stepLoadTypes="plugin">
      <paramValue name="algName">Psipred</paramValue>
      <paramValue name="inputDir">$$dataDir$$/master/mainresult_fixed</paramValue>
      <paramValue name="algInvResult">Secondary Structure prediction for all $$organismName$$ annotated proteins</paramValue>
      <paramValue name="setPercent">true</paramValue>
      <depends name="makeAlgInv"/>
    </step>

</workflowGraph>
