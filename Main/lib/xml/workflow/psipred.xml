<workflowGraph name="psipredWorkflow">
    <param name="proteinsFile"/>
    <param name="parentDataDir"/>

    <constant name="dataDir">$$parentDataDir$$/psipred</constant>
    <constant name="psipredProteinsFile">$$dataDir$$/proteinsFixedIds.fsa</constant>

    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="fixProteinIds" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::FixProteinIdsForPsipred">
      <paramValue name="inputProteinsFile">$$proteinsFile$$</paramValue>
      <paramValue name="outputProteinsFile">$$psipredProteinsFile$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makePsiPredNextflowConfig" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakePsiPredNextflowConfig">
      <paramValue name="inputFilePath">$$psipredProteinsFile$$</paramValue>
      <paramValue name="outputDir">$$dataDir$$/result</paramValue>
      <paramValue name="configFileName">nextflow.config</paramValue>
      <paramValue name="analysisDir">$$dataDir$$</paramValue>  
      <depends name="fixProteinIds"/>
    </step>

    <step name="mirrorToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster" stepLoadTypes="toCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makePsiPredNextflowConfig"/>
    </step>

    <step name="runPsiPredClusterTask" stepClass="ReFlow::StepClasses::RunAndMonitorNextflow">
      <paramValue name="workingDir">$$dataDir$$</paramValue>
      <paramValue name="resultsDir">$$dataDir$$/result</paramValue>
      <paramValue name="nextflowConfigFile">$$dataDir$$/nextflow.config</paramValue>
      <paramValue name="nextflowWorkflow">VEuPathDB/PsiPred</paramValue>
      <paramValue name="isGitRepo">true</paramValue>
      <depends name="mirrorToCluster"/>
    </step>

    <step name="mirrorFromCluster" stepClass="ReFlow::StepClasses::MirrorFromComputeCluster" stepLoadTypes="fromCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$/result</paramValue>
      <paramValue name="outputDir">$$dataDir$$/result</paramValue>
      <paramValue name="outputFiles">*.horiz, *.ss, *.ss2</paramValue>
      <paramValue name="deleteAfterCopy">false</paramValue>
      <depends name="runPsiPredClusterTask"/>
    </step>

    <step name="makeAlgInv" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeAlgInv" stepLoadTypes="makeAlgInv,plugin">
      <paramValue name="algName">Psipred</paramValue>
      <paramValue name="algVersion">dontcare</paramValue>
      <paramValue name="algDesc">dontcare</paramValue>
      <paramValue name="algResult">dontcare</paramValue>
      <depends name="mirrorFromCluster"/>
    </step>

    <step name="insertPsipred" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::LoadSecondaryStructures" stepLoadTypes="plugin">
      <paramValue name="algName">Psipred</paramValue>
      <paramValue name="inputDir">$$dataDir$$/result</paramValue>
      <paramValue name="algInvResult">dontcare</paramValue>
      <paramValue name="algImpVer">dontcare</paramValue>
      <paramValue name="setPercent">true</paramValue>
      <depends name="makeAlgInv"/>
    </step>

</workflowGraph>
