<workflowGraph name="getAndAnalyzeChipSeq">
    <param name="parentDataDir"/>
    <param name="chipSeqResourceName"/>
    <param name="indexFileDirForShortSeqAligner"/>
    <param name="organismResourceXmlFile"/>
    <param name="chipSeqExtDbRlsSpec"/>
    <param name="genomeExtDbSpec"/>
    <param name="generatePeakCalls"/>

    <constant name="dataDir">$$parentDataDir$$/getAndAnalyze_$$chipSeqResourceName$$</constant>

    <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <subgraph name="chipSeqResource" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$chipSeqResourceName$$</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <step name="mapChipSeqToGenomesAndTranscripts" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::DoNothingStep">
      <paramValue name="indexFileDir">$$indexFileDirForShortSeqAligner$$</paramValue>
      <paramValue name="inputFileDir">$$dataDir$$/$$chipSeqResourceName$$</paramValue>
      <paramValue name="outputDir">$$dataDir$$/seqCoverage</paramValue>
      <depends name="chipSeqResource"/>
    </step>

    <step name="reformatCoverageFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ReformatCoverageFileForInsertNextGenSeqCoverageWithSqlLdr">
      <paramValue name="inputFileDir">$$dataDir$$/seqCoverage</paramValue>
      <paramValue name="outputFile">$$dataDir$$/seqCoverage/chipSeqCov_allSamples.cov</paramValue>
      <paramValue name="extDbRlsSpec">$$chipSeqExtDbRlsSpec$$</paramValue>
      <paramValue name="genomeExtDbSpec">$$genomeExtDbSpec$$</paramValue>
      <depends name="mapChipSeqToGenomesAndTranscripts"/>
    </step>

    <step name="loadChipSeqCoverage" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertNextGenSeqCoverageWithSqlLdr" stepLoadTypes="plugin">
      <paramValue name="inputFile">$$dataDir$$/seqCoverage/chipSeqCov_allSamples.cov</paramValue>
      <depends name="reformatCoverageFile"/>
    </step>

    <step name="computePeaks" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::DoNothingStep" includeIf="$$generatePeakCalls$$">
      <depends name="mapChipSeqToGenomesAndTranscripts"/>
    </step>

    <step name="loadPeaks" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::DoNothingStep" stepLoadTypes="plugin" includeIf="$$generatePeakCalls$$">
      <depends name="computePeaks"/>
    </step>

</workflowGraph>
