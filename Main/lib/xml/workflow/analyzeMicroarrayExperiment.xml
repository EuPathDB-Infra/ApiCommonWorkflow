<workflowGraph name="analyzeMicroarrayExpression">
    <param name="parentDataDir"/>
    <param name="experimentResourceName"/>
    <param name="experimentResourceVersion"/>
    <param name="genomeExtDbRlsSpec"/>
    <param name="doExpressionAnalysis"/>
    <param name="geneProbeMappingTabFile"/>
    <param name="geneProbeMappingVendorFile"/>
    <param name="hasTimeSeries"/>
    <param name="relativeDownloadSiteDir"/>
    <param name="organismAbbrev"/>
    <param name="expectCdfFile"/>
    <param name="expectNdfFile"/>

    <constant name="dataDir">$$parentDataDir$$/$$experimentResourceName$$</constant>
<!--
    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>
-->
    <step name="doTranscriptExpression" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::DoTranscriptExpression">
      <paramValue name="analysisConfigFile">$$parentDataDir$$/$$experimentResourceName$$/final/analysisConfig.xml</paramValue>
      <paramValue name="inputDir">$$parentDataDir$$/$$experimentResourceName$$/final</paramValue>
      <paramValue name="outputDir">$$dataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="geneProbeMappingTabFile">$$geneProbeMappingTabFile$$</paramValue>
      <paramValue name="geneProbeMappingVendorFile">$$geneProbeMappingVendorFile$$</paramValue>
      <paramValue name="expectCdfFile">$$expectCdfFile$$</paramValue>
      <paramValue name="expectNdfFile">$$expectNdfFile$$</paramValue>
    </step>

    <step name="loadExpressionProfilesFromConfig" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertExpressionProfiles" stepLoadTypes="plugin">
      <paramValue name="configFile">$$dataDir$$/doTranscriptExpression/expression_profile_config.txt</paramValue>
      <paramValue name="inputDir">$$dataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="extDbRlsSpec">$$experimentResourceName$$|$$experimentResourceVersion$$</paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

    <step name="copyExpressionProfilesToDownloadDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CopyExpressionProfilesToDownloadDir">
      <paramValue name="configFile">$$dataDir$$/doTranscriptExpression/expression_profile_config.txt</paramValue>
      <paramValue name="copyFromDir">$$dataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="relativeDir">$$relativeDownloadSiteDir$$</paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

    <step name="calculateExpressionStats" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CalculateExpressionStatsForTimeSeries" stepLoadTypes="plugin" includeIf="$$hasTimeSeries$$" undoRoot="loadExpressionProfilesFromConfig">
      <paramValue name="extDbRlsSpec">$$experimentResourceName$$|$$experimentResourceVersion$$</paramValue>
      <paramValue name="configFile">$$dataDir$$/doTranscriptExpression/time_series_stats_config.txt</paramValue>
      <depends name="loadExpressionProfilesFromConfig"/>
    </step>

    <step name="loadAnalysisResult" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertSimpleRadAnalysisFromConfig" stepLoadTypes="plugin" includeIf="$$doExpressionAnalysis$$">
      <paramValue name="analysisWorkingDir">$$dataDir$$/doTranscriptExpression/</paramValue>
      <paramValue name="configFile">$$dataDir$$/doTranscriptExpression/analysis_result_config.txt</paramValue>
      <paramValue name="analysisResultView">DifferentialExpression</paramValue>
      <paramValue name="naFeatureView">GeneFeature</paramValue>
      <paramValue name="useSqlLdr">false</paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

    <step name="document-oneChannel"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">one_channel_MTHD</paramValue>
      <paramValue name="version">1.0</paramValue>
      <paramValue name="parameters"></paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

    <step name="document-twoChannel"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">two_channel_MTHD</paramValue>
      <paramValue name="version">1.0</paramValue>
      <paramValue name="parameters"></paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

    <step name="document-PaGE"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">PaGE_MTHD</paramValue>
      <paramValue name="version">5.1.6.1</paramValue>
      <paramValue name="parameters"></paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

</workflowGraph>
