<workflowGraph name="loadAndAnalyzeBACEnds">
  <param name="parentDataDir"/>
  <param name="BACEndsResourcesReference"/>
  <param name="organismResourceXmlFile"/>
  <param name="BACEndsExtDbRlsSpec"/>
  <param name="maxIntronSize"/>
  <param name="ncbiTaxonId"/>
  <param name="genomicSeqsFile"/>
  <param name="genomeExtDbRlsSpec"/>
  <param name="repeatMaskSpecies"/>
  <param name="genomicSeqsDir"/>

  <constant name="dataDir">$$parentDataDir$$/$$BACEndsResourceName$$_loadAndAnalyze</constant>
  <constant name="BACEndsSeqFile">$$dataDir$$/BACEndsSeqs.fsa</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <subgraph name="loadBACEndsResource" xmlFile="$$BACEndsResourcesReference$$">
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <depends name="makeDataDir"/>
  </subgraph>

  <step name="extractBACEndsSeqs"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractNaSeqs">
      <paramValue name="extDbRlsSpec">$$BACEndsExtDbRlsSpec$$</paramValue>
      <paramValue name="table">ExternalNASequence</paramValue>
      <paramValue name="alternateDefline">na_sequence_id, description, 'length='||length</paramValue>
      <paramValue name="outputFile">$$BACEndsSeqFile$$</paramValue>
      <paramValue name="separateFastaFiles">false</paramValue>
      <paramValue name="outputDirForSeparateFiles"></paramValue>
      <depends name="loadBACEndsResource"/> 
    </step>

    <step name="makeClusterTaskInputDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeRepeatMaskTaskInputDir">
      <paramValue name="taskInputDir">$$dataDir$$/input</paramValue>
      <paramValue name="seqsFile">$$BACEndsSeqFile$$</paramValue>
      <paramValue name="dangleMax">30</paramValue>
      <paramValue name="options">$$repeatMaskSpecies$$</paramValue>
      <depends name="extractBACEndsSeqs"/>
    </step>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeClusterTaskInputDir"/>
    </step>

    <step name="runClusterTask" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::RunAndMonitorClusterTask" stepLoadTypes="cluster">
      <paramValue name="taskInputDir">$$dataDir$$/input</paramValue>
      <paramValue name="numNodes">20</paramValue>
      <paramValue name="processorsPerNode">1</paramValue>
      <depends name="mirrorToCluster"/>
    </step>

    <step name="mirrorFromCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorFromComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$/master</paramValue>
      <paramValue name="outputDir">$$dataDir$$/master/mainresult</paramValue>
      <paramValue name="outputFiles">blocked.err,blocked.seq</paramValue>
      <depends name="runClusterTask"/>
    </step>

    <subgraph name="mapBACEndsSeqsToGenome" xmlFile="blatDnaAgainstGenome.xml">
      <paramValue name="dataDir">$$dataDir$$/BACEndsSeqsBlat</paramValue>
      <paramValue name="maxIntronSize">$$maxIntronSize$$</paramValue>
      <paramValue name="targetNcbiTaxonId">$$ncbiTaxonId$$</paramValue>
      <paramValue name="targetSeqsDir">$$genomicSeqsDir$$</paramValue>
      <paramValue name="targetExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="queryNcbiTaxonId">$$ncbiTaxonId$$</paramValue>
      <paramValue name="queryFile">$$dataDir$$/master/mainresult/blocked.seq</paramValue>
      <paramValue name="queryTable">ExternalNASequence</paramValue>
      <paramValue name="queryExtDbRlsSpec">$$BACEndsExtDbRlsSpec$$</paramValue>
      <depends name="mirrorFromCluster"/>
    </subgraph>


</workflowGraph>
