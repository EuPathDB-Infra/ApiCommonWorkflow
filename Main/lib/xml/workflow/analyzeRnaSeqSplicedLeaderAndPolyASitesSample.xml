<workflowGraph name="">
    <param name="parentDataDir"/>
    <param name="outputDir"/>
    <param name="sampleName"/>
    <param name="shortSeqsFile"/>
    <param name="experimentDatasetDir"/>
    <param name="experimentExtDbRlsSpec"/>
    <param name="genomeExtDbSpec"/>
    <param name="genomicSeqsFile"/>
    <param name="type"/>
    <param name="relativeWebServicesDir"/>
    <param name="experimentDatasetName"/>

    <constant name="dataDir">$$parentDataDir$$/analyze_$$sampleName$$</constant>

    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="runBowtie" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::SsaRunBowtie">
      <paramValue name="isPairedEnds">false</paramValue>
      <paramValue name="haveQuals">false</paramValue>
      <paramValue name="inputFwdSeqsFile">$$shortSeqsFile$$</paramValue>
      <paramValue name="inputFwdQualsFile"></paramValue>
      <paramValue name="inputRevSeqsFile"></paramValue>
      <paramValue name="inputRevQualsFile"></paramValue>
      <paramValue name="seqsFileType">FASTA</paramValue>
      <paramValue name="inputIndexesDir">$$dataDir$$/indexes</paramValue>
      <paramValue name="outputFile">$$dataDir$$/$$sampleName$$.bt</paramValue>
      <paramValue name="bowtieParams">-a -v 3 -m 14</paramValue>
      <paramValue name="isColorSpace">false</paramValue>
      <depends name="makeDataDir"/>
    </step>

     <step name="insertSpliceSiteFeatures" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertSpliceSiteFeatures" stepLoadTypes="plugin">
      <paramValue name="configFile">$$experimentDatasetDir$$/config.txt</paramValue>
      <paramValue name="inputDir">$$dataDir$$</paramValue>
      <paramValue name="extDbRlsSpec">$$experimentExtDbRlsSpec$$</paramValue>
      <paramValue name="type">$$type$$</paramValue>
      <depends name="runBowtie"/>
    </step>

    <step name="insertSplicedLeaderAndPolyASitesGenes" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertSplicedLeaderAndPolyASitesGenes">
      <paramValue name="type">$$type$$</paramValue>
      <paramValue name="sampleName">$$sampleName$$</paramValue>
      <depends name="insertSpliceSiteFeatures"/> 
  </step>

    <step name="updateSplicedLeaderAndPolyASitesGenes" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::UpdateSplicedLeaderAndPolyASitesGenes">
      <paramValue name="type">$$type$$</paramValue>
      <paramValue name="sampleName">$$sampleName$$</paramValue>
      <depends name="insertSplicedLeaderAndPolyASitesGenes"/> 
  </step>

     <step name="extractSplicedLeaderAndPolyASitesGenes" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractSplicedLeaderAndPolyASitesGenes">
      <paramValue name="configFile">$$experimentDatasetDir$$/config.txt</paramValue>
      <paramValue name="outputUniqFile">$$dataDir$$/uniqProfile.out</paramValue>
      <paramValue name="outputNonUniqFile">$$dataDir$$/nonUniqProfile.out</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="type">$$type$$</paramValue>
      <depends name="updateSplicedLeaderAndPolyASitesGenes"/>
    </step>

    <step name="makeMinPercentileProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakePercentileProfile">
      <paramValue name="inputFile">$$dataDir$$/uniqProfile.out</paramValue>
      <paramValue name="outputFile">$$dataDir$$/minPercents.txt</paramValue>
      <paramValue name="ties">min</paramValue>
      <paramValue name="hasHeader">true</paramValue>
      <depends name="extractSplicedLeaderAndPolyASitesGenes"/>
    </step>

    <step name="insertExpressionProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertExpressionProfiles" stepLoadTypes="plugin">
      <paramValue name="configFile">$$experimentDatasetDir$$/profile_config.txt</paramValue>
      <paramValue name="inputDir">$$dataDir$$</paramValue>
      <paramValue name="extDbRlsSpec">$$experimentExtDbRlsSpec$$</paramValue>
      <depends name="makeMinPercentileProfile"/>
    </step>

    <step name="copyExpressionProfilesToDownloadDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CopyExpressionProfilesToDownloadDir">
      <paramValue name="configFile">$$experimentDatasetDir$$/profile_config.txt</paramValue>
      <paramValue name="copyFromDir">$$dataDir$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="relativeDir">$$relativeWebServicesDir$$</paramValue>
      <paramValue name="experimentDatasetName">$$experimentDatasetName$$</paramValue>
      <depends name="insertExpressionProfile"/>
    </step>

    <step name="document-RnaSeqOrChipSeqRum"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">bowtie_rna_seq_SplicedLeaderAndPolyASitesGenes_MTHD</paramValue>
      <paramValue name="version">1.0</paramValue>
      <paramValue name="parameters"></paramValue>
      <depends name="runBowtie"/>
    </step>

</workflowGraph>


