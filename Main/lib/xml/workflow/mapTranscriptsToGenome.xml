<workflowGraph name="">

  <param name="parentDataDir"/>
  <param name="genomeExtDbRlsSpec"/>
  <param name="ncbiTaxonId"/>
  <param name="maxIntronSize"/>
  <param name="organismAbbrev"/>
  <param name="isReferenceStrain"/>
  <param name="genomicSeqsDir"/>

  <constant name="dataDir">$$parentDataDir$$/assemblies</constant>
  <constant name="assemblySeqsDataDir">$$dataDir$$/makeAssemblySeqs</constant>
  <constant name="assembliesDataDir">$$dataDir$$/makeAssemblies</constant>

  <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

    <step name="mirrorToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="makeAndBlockAssemblySeqs" xmlFile="makeAndBlockAssemblySeqs.xml">
      <paramValue name="dataDir">$$assemblySeqsDataDir$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="isReferenceStrain">$$isReferenceStrain$$</paramValue>
      <depends name="mirrorToCluster"/>
    </subgraph>

    <subgraph name="mapAssemblySeqsToGenome" xmlFile="blatDnaAgainstGenome.xml">
      <paramValue name="dataDir">$$dataDir$$/assemSeqsBlat</paramValue>
      <paramValue name="maxIntronSize">$$maxIntronSize$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="targetSeqsDir">$$genomicSeqsDir$$</paramValue>
      <paramValue name="targetExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="queryFile">$$assemblySeqsDataDir$$/master/mainresult/blocked.seq</paramValue>
      <paramValue name="queryTable">AssemblySequence</paramValue>
      <paramValue name="queryExtDbRlsSpec"></paramValue>
      <depends name="makeAndBlockAssemblySeqs"/>
    </subgraph>

    <step name="document-mapAssemblySeqsToGenome"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">blat_assembly_seqs_MTHD</paramValue>
      <paramValue name="version">31</paramValue>
      <paramValue name="parameters"></paramValue>
      <depends name="mapAssemblySeqsToGenome"/>
    </step>

</workflowGraph>
