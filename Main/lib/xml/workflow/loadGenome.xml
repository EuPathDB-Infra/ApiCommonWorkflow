<workflowGraph name="loadGenome">
  <param name="parentDataDir"/>
  <param name="organismAbbrev"/>
  <param name="organismFullName"/>
  <param name="organismNameForFiles"/>
  <param name="publicOrganismAbbrev"/>
  <param name="ncbiTaxonId"/>
  <param name="speciesNcbiTaxonId"/>
  <param name="isReferenceStrain"/>
  <param name="referenceStrainOrganismAbbrev"/>
  <param name="isAnnotatedGenome"/>
  <param name="isDraftGenome"/>
  <param name="hasTemporaryNcbiTaxonId"/>
  <param name="orthomclAbbrev"/>
  <param name="strainAbbrev"/>
  <param name="hasMitochondrialGenomeSequence"/>
  <param name="hasPlastidGenomeSequence"/>
  <param name="genomeExtDbRlsSpec"/>
  <param name="organismResourceXmlFile"/>
  <param name="relativeDownloadSiteDir"/>
  <param name="relativeWebServicesDir"/>
  <param name="projectName"/>
  <param name="projectVersion"/>
  <param name="genomicSeqsFileForSsa"/>
  <param name="transcriptSeqsFileForSsa"/>
  <param name="geneModelFileForSsa"/>
  <param name="genomicSeqsFile"/>
  <param name="genomicSeqsDir"/>
  <param name="proteinsFile"/>

  <constant name="dataDir">$$parentDataDir$$/loadGenome</constant>

  <step name="insertOrganism"
        stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertOrganism">
    <paramValue name="fullName">$$organismFullName$$</paramValue>
    <paramValue name="project">$$projectName$$</paramValue>
    <paramValue name="ncbiTaxonId">$$ncbiTaxonId$$</paramValue>
    <paramValue name="speciesNcbiTaxonId">$$speciesNcbiTaxonId$$</paramValue>
    <paramValue name="abbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="abbrevPublic">$$organismAbbrev$$</paramValue>
    <paramValue name="nameForFilenames">$$organismNameForFiles$$</paramValue>
    <paramValue name="abbrevOrthomcl">$$orthomclAbbrev$$</paramValue>
    <paramValue name="abbrevStrain">$$strainAbbrev$$</paramValue>
    <paramValue name="abbrevRefStrain">$$referenceStrainOrganismAbbrev$$</paramValue>
    <paramValue name="isReferenceStrain">$$isReferenceStrain$$</paramValue>
    <paramValue name="isAnnotatedGenome">$$isAnnotatedGenome$$</paramValue>
    <paramValue name="isDraftGenome">$$isDraftGenome$$</paramValue>
    <paramValue name="hasTemporaryNcbiTaxonId">$$hasTemporaryNcbiTaxonId$$</paramValue>
  </step>

  <!-- set depends to insertOrganism to force that step to run early in the flow, thereby validating the organism info before getting too far -->
  <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
    <depends name="insertOrganism"/>
  </step>

  <subgraph name="makeOrganismDownloadSite" xmlFile="makeOrganismDownloadSiteDirs.xml">
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="projectName">$$projectName$$</paramValue>
    <paramValue name="projectVersion">$$projectVersion$$</paramValue>
    <paramValue name="organelleName"></paramValue>
    <paramValue name="isOrganelle">false</paramValue>
    <paramValue name="isReferenceStrain">$$isReferenceStrain$$</paramValue>
    <paramValue name="relativeDownloadSiteDir">$$relativeDownloadSiteDir$$</paramValue>
    <paramValue name="relativeWebServicesDir">$$relativeWebServicesDir$$</paramValue>
    <depends name="insertOrganism"/>
  </subgraph>

  <subgraph name="makeOrganismPlastidDownloadSite" xmlFile="makeOrganismDownloadSiteDirs.xml" includeIf="$$hasPlastidGenomeSequence$$">
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="projectName">$$projectName$$</paramValue>
    <paramValue name="projectVersion">$$projectVersion$$</paramValue>
    <paramValue name="organelleName">plastid</paramValue>
    <paramValue name="isOrganelle">true</paramValue>
    <paramValue name="isReferenceStrain">false</paramValue>
    <paramValue name="relativeDownloadSiteDir">$$relativeDownloadSiteDir$$</paramValue>
    <paramValue name="relativeWebServicesDir">$$relativeWebServicesDir$$</paramValue>
    <depends name="insertOrganism"/>
  </subgraph>

  <subgraph name="makeOrganismMitoDownloadSite" xmlFile="makeOrganismDownloadSiteDirs.xml" includeIf="$$hasMitochondrialGenomeSequence$$">
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="projectName">$$projectName$$</paramValue>
    <paramValue name="projectVersion">$$projectVersion$$</paramValue>
    <paramValue name="organelleName">mito</paramValue>
    <paramValue name="isOrganelle">true</paramValue>
    <paramValue name="isReferenceStrain">false</paramValue>
    <paramValue name="relativeDownloadSiteDir">$$relativeDownloadSiteDir$$</paramValue>
    <paramValue name="relativeWebServicesDir">$$relativeWebServicesDir$$</paramValue>
    <depends name="insertOrganism"/>
  </subgraph>

  <subgraph name="genomeSequenceAndFeatures" xmlFile="$$projectName$$/$$organismAbbrev$$/genomeSequenceAndFeatures.xml">
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="dataDir">$$dataDir$$</paramValue>
    <depends name="makeDataDir"/>
  </subgraph>

  <step name="extractGenomicSeqs"
        stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractNaSeqs">
    <paramValue name="extDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
    <paramValue name="table">ExternalNASequence</paramValue>
    <paramValue name="alternateDefline"></paramValue>
    <paramValue name="outputFile">$$genomicSeqsFile$$</paramValue>
    <paramValue name="separateFastaFiles">false</paramValue>
    <paramValue name="outputDirForSeparateFiles"></paramValue>
    <depends name="genomeSequenceAndFeatures"/> 
  </step>

  <step name="extractProteins"
        stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractAnnotatedProteinsBySpecies" includeIf="$$isAnnotatedGenome$$">
    <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
    <paramValue name="ncbiTaxonId">$$ncbiTaxonId$$</paramValue>
    <paramValue name="outputFile">$$proteinsFile$$</paramValue>
    <depends name="genomeSequenceAndFeatures"/>
  </step>

  <step name="extractGenomicSeqsIntoSeparateFastaFiles"
        stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractNaSeqs">
    <paramValue name="extDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
    <paramValue name="table">ExternalNASequence</paramValue>
    <paramValue name="outputFile"></paramValue>
    <paramValue name="alternateDefline"></paramValue>
    <paramValue name="separateFastaFiles">true</paramValue>
    <paramValue name="outputDirForSeparateFiles">$$genomicSeqsDir$$_ori</paramValue>
    <depends name="genomeSequenceAndFeatures"/>
  </step>


  <step name="fixFileNamesforGenomicSeqsSeparateFasta" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::FixGenomicSeqsSeparateFastaFileNames">
    <paramValue name="inputDir">$$genomicSeqsDir$$_ori</paramValue>
    <paramValue name="outputDir">$$genomicSeqsDir$$</paramValue>
    <depends name="extractGenomicSeqsIntoSeparateFastaFiles"/>
  </step>

  <step name="makeGenomeTargetListFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeGenomeTargetListFile">
    <paramValue name="targetDir">$$genomicSeqsDir$$</paramValue>
    <paramValue name="outputFile">$$dataDir$$/targetList</paramValue>
    <depends name="fixFileNamesforGenomicSeqsSeparateFasta"/>
  </step>

  <step name="extractGenomicSeqsForSsa"
        stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractNaSeqsForSsa">
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="outputFile">$$genomicSeqsFileForSsa$$</paramValue>
  </step>

  <step name="extractTranscriptSeqsForSsa"
        stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractTranscriptSeqsForSsa" includeIf="$$isAnnotatedGenome$$">
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="outputFile">$$transcriptSeqsFileForSsa$$</paramValue>
  </step>

  <step name="extractGeneModelForSsa"
        stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractGeneModelForSsa" includeIf="$$isAnnotatedGenome$$">
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="outputFile">$$geneModelFileForSsa$$</paramValue>
    <paramValue name="useCDSCoordinates">false</paramValue>
  </step>

  <step name="extractGeneModelOnCDSForSsa"
        stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractGeneModelForSsa" includeIf="$$isAnnotatedGenome$$">
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="outputFile">$$geneModelFileForSsa$$</paramValue>
    <paramValue name="useCDSCoordinates">true</paramValue>

  </step>

  <step name="mirrorToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster">
    <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
    <depends name="extractGenomicSeqs"/>
    <depends name="extractProteins"/>
    <depends name="extractGenomicSeqsForSsa"/>
    <depends name="extractTranscriptSeqsForSsa"/>
    <depends name="extractGeneModelForSsa"/>
    <depends name="makeGenomeTargetListFile"/>
  </step>

  <step name="runNibOnCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::RunNibOnCluster">
    <paramValue name="inputFile">$$dataDir$$/targetList</paramValue>
    <paramValue name="outputDir">$$genomicSeqsDir$$</paramValue>
    <depends name="mirrorToCluster"/>
  </step>


</workflowGraph>
