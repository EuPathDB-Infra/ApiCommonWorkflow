<workflowGraph name="common">
      <param name="projectName"/>
      <param name="projectVersion"/>
      <param name="comparativeGenomicsDir"/>
      <param name="relativeWebServicesDir"/>
      <param name="relativeDownloadSiteDir"/>

    <step name="makeProjectReleaseDownloadDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InitSiteDir">
      <paramValue name="relativeDir">$$relativeDownloadSiteDir$$</paramValue>
    </step>

    <step name="makeProjectReleaseMercatorWebSvcDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InitSiteDir">
      <paramValue name="relativeDir">$$relativeWebServicesDir$$/mercator</paramValue>
    </step>

    <step name="makeComparativeGenomicsDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$comparativeGenomicsDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

</workflowGraph>
