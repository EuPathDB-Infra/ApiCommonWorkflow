<workflowGraph name="common">
      <param name="projectName"/>
      <param name="projectVersion"/>
      <param name="comparativeGenomicsFastaDir"/>
      <param name="comparativeGenomicsGffDir"/>
      <param name="relativeWebServicesDir"/>
      <param name="relativeDownloadSiteDir"/>

    <constant name="dataDir">common</constant>

    <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="makeProjectReleaseDownloadDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InitSiteDir">
      <paramValue name="relativeDir">$$relativeDownloadSiteDir$$</paramValue>
    </step>

    <step name="makeProjectReleaseBlastWebSvcDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InitSiteDir">
      <paramValue name="relativeDir">$$relativeWebServicesDir$$/blast</paramValue>
    </step>

    <step name="makeProjectReleaseMercatorWebSvcDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InitSiteDir">
      <paramValue name="relativeDir">$$relativeWebServicesDir$$/mercator</paramValue>
    </step>

    <step name="makeProjectReleaseMotifWebSvcDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeApiSiteFilesDir">
      <paramValue name="relativeDir">$$relativeWebServicesDir$$/motif</paramValue>
    </step>

    <step name="makeComparativeGenomicsFastaDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$comparativeGenomicsFastaDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makeComparativeGenomicsGffDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$comparativeGenomicsGffDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

</workflowGraph>
