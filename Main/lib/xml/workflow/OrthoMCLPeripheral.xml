    <paramValue name="coreGroupsFile">peripheral/results/GroupsFile.txt</paramValue>
    <paramValue name="residualGroupsFile">peripheral/results/reformattedGroups.txt</paramValue>
    <paramValue name="coreSequencesFile">peripheral/results/bestReps.fasta</paramValue>
