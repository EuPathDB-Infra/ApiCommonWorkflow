<workflowGraph name="pyoeliiArrayStudies">
  <param name="parentDataDir"/>
  <param name="organismResourceXmlFile"/>
  <param name="bowtieGenomicIndexDir"/>
  <param name="bowtieTranscriptIndexDir"/>
  <param name="ssaGeneModelFile"/>
  <param name="genomicSeqsFile"/>
  <param name="genomicSeqsDir"/>
  <param name="maxIntronSize"/>
  <param name="genomicSeqsFileForSsa"/>

  <constant name="dataDir">$$parentDataDir$$/pyoeliiArrayResources</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

  <subgraph name="Pyoelii_Vaidya_Bergman_oligos_getAndMapProbes" xmlFile="getAndMapProbes.xml">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="probeResourceName">Pyoelii_Vaidya_Bergman_oligos_RSRC</paramValue>
    <paramValue name="chipProbeExtDbRlsSpec">Pyoelii_Vaidya_Bergman_oligos_RSRC|@@Pyoelii_Vaidya_Bergman_oligos_VER@@</paramValue>
    <paramValue name="isOneChannel">false</paramValue>
    <paramValue name="loadGeneProbeMapping">false</paramValue>
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="bowtieGenomicIndexDir">$$bowtieGenomicIndexDir$$</paramValue>
    <paramValue name="bowtieTranscriptIndexDir">$$bowtieTranscriptIndexDir$$</paramValue>
    <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
    <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
    <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
    <paramValue name="genomeExtDbRlsSpec">Pyoelii_Contigs_RSRC|@@Pyoelii_Contigs_VER@@</paramValue>
    <paramValue name="readLength">65</paramValue>
    <paramValue name="organismFullName">@@PyOrganismFullName@@</paramValue>
    <paramValue name="maxIntronSize">$$maxIntronSize$$</paramValue>
    <paramValue name="runParse2fasta">true</paramValue>
    <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
    <depends name="mirrorToCluster"/>
  </subgraph>

  <subgraph name="Py_Kappe_array_RSRC" xmlFile="loadResource.xml">
    <paramValue name="resourceName">Py_Kappe_array_RSRC</paramValue>
    <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <depends name="Pyoelii_Vaidya_Bergman_oligos_getAndMapProbes"/>
  </subgraph>

  <subgraph name="Kappe_array_analyzeMicroarrayExpression" xmlFile="analyzeMicroarrayExpression.xml">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="experimentResourceName">Py_Kappe_array_RSRC</paramValue>
    <paramValue name="chipProbeExtDbRlsSpec">Pyoelii_Vaidya_Bergman_oligos_RSRC|@@Pyoelii_Vaidya_Bergman_oligos_VER@@</paramValue>
    <paramValue name="experimentExtDbRlsSpec">Py_Kappe_array_RSRC|@@Py_Kappe_array_VER@@</paramValue>
    <paramValue name="genomeExtDbRlsSpec">Pyoelii_Contigs_RSRC|@@Pyoelii_Contigs_VER@@</paramValue>
    <paramValue name="insertAnalysisResult">true</paramValue>
    <paramValue name="probeGenesMappingFile">$$dataDir$$/getAndMap_Pyoelii_Vaidya_Bergman_oligos_RSRC/uniqueMapping.txt</paramValue>
    <depends name="Py_Kappe_array_RSRC"/>
  </subgraph>

  <subgraph name="Affy-scrMalaria_getAndMapProbes" xmlFile="getAndMapProbes.xml">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="probeResourceName">Py_array_Affy_scrMalaria_RSRC</paramValue>
    <paramValue name="indexFileDirForShortSeqAligner"></paramValue>
    <paramValue name="chipProbeExtDbRlsSpec">Py_array_Affy_scrMalaria_RSRC|@@Py_array_Affy_scrMalaria_VER@@</paramValue>
    <paramValue name="isOneChannel">true</paramValue>
    <paramValue name="loadGeneProbeMapping">true</paramValue>
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="bowtieGenomicIndexDir">$$bowtieGenomicIndexDir$$</paramValue>
    <paramValue name="bowtieTranscriptIndexDir">$$bowtieTranscriptIndexDir$$</paramValue>
    <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
    <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
    <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
    <paramValue name="genomeExtDbRlsSpec">Pyoelii_Contigs_RSRC|@@Pyoelii_Contigs_VER@@</paramValue>
    <paramValue name="readLength">25</paramValue>
    <paramValue name="organismFullName">@@PyOrganismFullName@@</paramValue>
    <paramValue name="maxIntronSize">$$maxIntronSize$$</paramValue>
    <paramValue name="runParse2fasta">true</paramValue>
    <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
    <depends name="mirrorToCluster"/>
  </subgraph>

  <subgraph name="winzeler_py_pf_comparison_array_RSRC" xmlFile="loadResource.xml">
    <paramValue name="resourceName">winzeler_py_pf_comparison_array_RSRC</paramValue>
    <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <depends name="Affy-scrMalaria_getAndMapProbes"/>
  </subgraph>

  <subgraph name="winzeler_py_pf_comparison_array_analyzeMicroarrayExpression" xmlFile="analyzeMicroarrayExpression.xml">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="experimentResourceName">winzeler_py_pf_comparison_array_RSRC</paramValue>
    <paramValue name="chipProbeExtDbRlsSpec">Py_array_Affy_scrMalaria_RSRC|@@Py_array_Affy_scrMalaria_VER@@</paramValue>
    <paramValue name="experimentExtDbRlsSpec">winzeler_py_pf_comparison_array_RSRC|@@winzeler_py_pf_comparison_array_VER@@</paramValue>
    <paramValue name="genomeExtDbRlsSpec">Pyoelii_Contigs_RSRC|@@Pyoelii_Contigs_VER@@</paramValue>
    <paramValue name="insertAnalysisResult">true</paramValue>
    <paramValue name="probeGenesMappingFile">$$dataDir$$/getAndMap_Py_array_Affy_scrMalaria_RSRC/uniqueMapping.txt</paramValue>
    <depends name="winzeler_py_pf_comparison_array_RSRC"/>
  </subgraph>

</workflowGraph>
