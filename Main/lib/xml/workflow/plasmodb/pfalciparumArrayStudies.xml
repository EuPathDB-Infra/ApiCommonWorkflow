<workflowGraph name="pfalciparumArrayResources">
  <param name="parentDataDir"/>
  <param name="organismResourceXmlFile"/>
  <param name="bowtieGenomicIndexDir"/>
  <param name="bowtieTranscriptIndexDir"/>
  <param name="ssaGeneModelFile"/>
  <param name="genomicSeqsFile"/>
  <param name="genomicSeqsDir"/>
  <param name="maxIntronSize"/>
  <param name="genomicSeqsFileForSsa"/>

  <constant name="dataDir">$$parentDataDir$$/pfalciparumArrayResources</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>


  <subgraph name="Affy-scrMalaria_getAndMapProbes" xmlFile="getAndMapProbes.xml">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="probeResourceName">Pf_array_Affy_scrMalaria_RSRC</paramValue>
    <paramValue name="chipProbeExtDbRlsSpec">Pf_array_Affy_scrMalaria_RSRC|@@Pf_array_Affy_scrMalaria_VER@@</paramValue>
    <paramValue name="isOneChannel">true</paramValue>
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="bowtieGenomicIndexDir">$$bowtieGenomicIndexDir$$</paramValue>
    <paramValue name="bowtieTranscriptIndexDir">$$bowtieTranscriptIndexDir$$</paramValue>
    <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
    <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
    <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
    <paramValue name="genomeExtDbRlsSpec">Pfalciparum_chromosomes_RSRC|@@Pfalciparum_chromosomes_VER@@</paramValue>
    <paramValue name="organismFullName">@@PfOrganismFullName@@</paramValue>
    <paramValue name="maxIntronSize">$$maxIntronSize$$</paramValue>
    <paramValue name="runParse2fasta">true</paramValue>
    <paramValue name="readLength">60</paramValue>
    <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
    <paramValue name="nonUniqueMappingSuppressLimits">30</paramValue>
    <paramValue name="dnaHybridazation">false</paramValue>
    <depends name="mirrorToCluster"/>
  </subgraph>

  <subgraph name="A-MEXP-75_getAndMapProbes" xmlFile="getAndMapProbes.xml">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="probeResourceName">Pf_array_A_MEXP_75_RSRC</paramValue>
    <paramValue name="chipProbeExtDbRlsSpec">Pf_array_A_MEXP_75_RSRC|@@Pf_array_A_MEXP_75_VER@@</paramValue>
    <paramValue name="isOneChannel">false</paramValue>
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="bowtieGenomicIndexDir">$$bowtieGenomicIndexDir$$</paramValue>
    <paramValue name="bowtieTranscriptIndexDir">$$bowtieTranscriptIndexDir$$</paramValue>
    <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
    <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
    <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
    <paramValue name="genomeExtDbRlsSpec">Pfalciparum_chromosomes_RSRC|@@Pfalciparum_chromosomes_VER@@</paramValue>
    <paramValue name="organismFullName">@@PfOrganismFullName@@</paramValue>
    <paramValue name="maxIntronSize">$$maxIntronSize$$</paramValue>
    <paramValue name="runParse2fasta">true</paramValue>
    <paramValue name="readLength">70</paramValue>
    <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
    <paramValue name="nonUniqueMappingSuppressLimits">30</paramValue>
    <paramValue name="dnaHybridazation">false</paramValue>
    <depends name="mirrorToCluster"/>
  </subgraph>

</workflowGraph>
