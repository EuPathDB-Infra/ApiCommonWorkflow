<workflowGraph name="pyoeliiSpecific">
  <param name="projectName"/>
  <param name="projectVersion"/>
  <param name="parentDataDir"/>
  <param name="organismResourceXmlFile"/>
  <param name="downloadSiteDataDir"/>
  <param name="maxIntronSize"/>

  <constant name="dataDir">$$parentDataDir$$/PyoeliiSpecific</constant>
  <constant name="downloadSiteDataDir">$$downloadSiteDataDir$$/Pyoelii</constant>
  <constant name="genomicSeqsFile">$$parentDataDir$$/PyoeliiLoadGenome/genomicSeqs.fsa</constant>
  <constant name="genomicSeqsDir">$$parentDataDir$$/PyoeliiLoadGenome/genomicSeqs</constant>
  <constant name="genomicSeqsFileForSsa">$$parentDataDir$$/PyoeliiLoadGenome/genomicSeqsForSsa.fsa</constant>
  <constant name="bowtieGenomicIndexDir">$$parentDataDir$$/PyoeliiLoadGenome/genomicIndexes/</constant>
  <constant name="bowtieTranscriptIndexDir">$$parentDataDir$$/PyoeliiLoadGenome/transcriptsIndexes/</constant>
  <constant name="ssaGeneModelFile">$$parentDataDir$$/PyoeliiLoadGenome/geneModelForSsa.txt</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="mapIsolatesToGenome" xmlFile="plasmodb/plasmoMapIsolatesToGenome.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="organismName">Pyoelii</paramValue>
      <paramValue name="genomeExtDbRlsSpec">Pyoelii_Contigs_RSRC|@@Pyoelii_Contigs_VER@@</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <depends name="mirrorToCluster"/>
      <dependsGlobal name="isolatesResource"/>
    </subgraph>

    <subgraph name="Py_CorrectGeneAliases_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Py_CorrectGeneAliases_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

  <step name="makeGeneAliasesMappingFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeGeneAliasesMappingFile">
     <paramValue name="genomeExtDbRlsSpec">Pyoelii_Contigs_RSRC|@@Pyoelii_Contigs_VER@@</paramValue>
     <paramValue name="outputFile">$$downloadSiteDataDir$$/PyoeliiGeneAlias_$$projectName$$-$$projectVersion$$.txt</paramValue>
    <depends name="Py_CorrectGeneAliases_RSRC"/>
  </step>

  <subgraph name="dbxRefsResources" xmlFile="plasmodb/pyoeliiDbxRefsResource.xml">
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="euPathUniProtLinkDownloadFile">$$downloadSiteDataDir$$/PyoeliiEuPathUniProtLinks_$$projectName$$-$$projectVersion$$.txt</paramValue>
    <paramValue name="projectName">$$projectName$$</paramValue>
    <depends name="Py_CorrectGeneAliases_RSRC"/>
  </subgraph>

  <subgraph name="miscResources" xmlFile="plasmodb/pyoeliiMiscResource.xml">
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <depends name="makeDataDir"/>
  </subgraph>

    <subgraph name="arrayResources" xmlFile="plasmodb/pyoeliiArrayStudies.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="bowtieGenomicIndexDir">$$bowtieGenomicIndexDir$$</paramValue>
      <paramValue name="bowtieTranscriptIndexDir">$$bowtieTranscriptIndexDir$$</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
      <paramValue name="maxIntronSize">$$maxIntronSize$$</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <depends name="Py_CorrectGeneAliases_RSRC"/>
    </subgraph>

    <subgraph name="Pyoelii_EC_numbers_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Pyoelii_EC_numbers_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
      <dependsGlobal name="enzymeDB_RSRC"/>
    </subgraph>
</workflowGraph>
