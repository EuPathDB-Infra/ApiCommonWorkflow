<workflowGraph name="pbergheiSpecific">
  <param name="projectName"/>
  <param name="projectVersion"/>
  <param name="parentDataDir"/>
  <param name="organismResourceXmlFile"/>
  <param name="downloadSiteDataDir"/>

  <constant name="dataDir">$$parentDataDir$$/PbergheiSpecific</constant>
  <constant name="downloadSiteDataDir">$$downloadSiteDataDir$$/Pberghei</constant>
  <constant name="genomicSeqsFile">$$parentDataDir$$/PbergheiLoadGenome/genomicSeqs.fsa</constant>
  <constant name="genomicSeqsDir">$$parentDataDir$$/PbergheiLoadGenome/genomicSeqs</constant>
  <constant name="bowtieGenomicIndexDir">$$parentDataDir$$/PbergheiLoadGenome/genomicIndexes/</constant>
  <constant name="bowtieTranscriptIndexDir">$$parentDataDir$$/PbergheiLoadGenome/transcriptsIndexes/</constant>
  <constant name="ssaGeneModelFile">$$parentDataDir$$/PbergheiLoadGenome/geneModelForSsa.txt</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="mapIsolatesToGenome" xmlFile="plasmodb/plasmoMapIsolatesToGenome.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="organismName">Pberghei</paramValue>
      <paramValue name="genomeExtDbRlsSpec">Pberghei_chromosomes_RSRC|@@Pberghei_chromosomes_VER@@</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <depends name="mirrorToCluster"/>
      <dependsGlobal name="isolatesResource"/>
    </subgraph>

    <subgraph name="Pb_CorrectGeneAliases_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Pb_CorrectGeneAliases_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

  <step name="makeGeneAliasesMappingFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeGeneAliasesMappingFile">
     <paramValue name="genomeExtDbRlsSpec">Pberghei_chromosomes_RSRC|@@Pberghei_chromosomes_VER@@</paramValue>
     <paramValue name="outputFile">$$downloadSiteDataDir$$/PbergheiGeneAlias_$$projectName$$-$$projectVersion$$.txt</paramValue>
    <depends name="Pb_CorrectGeneAliases_RSRC"/>
  </step>

  <subgraph name="dbxRefsResources" xmlFile="plasmodb/pbergheiDbxRefsResource.xml">
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="euPathUniProtLinkDownloadFile">$$downloadSiteDataDir$$/PbergheiEuPathUniProtLinks_$$projectName$$-$$projectVersion$$.txt</paramValue>
    <paramValue name="projectName">$$projectName$$</paramValue>
    <depends name="Pb_CorrectGeneAliases_RSRC"/>
  </subgraph>

    <subgraph name="arrayResources" xmlFile="plasmodb/pbergheiArrayStudies.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="bowtieGenomicIndexDir">$$bowtieGenomicIndexDir$$</paramValue>
      <paramValue name="bowtieTranscriptIndexDir">$$bowtieTranscriptIndexDir$$</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
      <depends name="Pb_CorrectGeneAliases_RSRC"/>
    </subgraph>

    <subgraph name="GOAssociations_Pberghei_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">GOAssociations_Pberghei_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
      <dependsGlobal name="GO_RSRC"/>
      <dependsGlobal name="GO_evidence_codes_RSRC"/>
    </subgraph>

    <subgraph name="Pberghei_ECNumbers_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Pberghei_ECNumbers_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
      <dependsGlobal name="enzymeDB_RSRC"/>
    </subgraph>

  <subgraph name="miscResources" xmlFile="plasmodb/pbergheiMiscResource.xml">
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <depends name="makeDataDir"/>
  </subgraph>

</workflowGraph>
