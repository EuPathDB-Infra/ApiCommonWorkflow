<workflowGraph name="pfDuffyRnaSeq">
    <param name="parentDataDir"/>
    <param name="organismResourceXmlFile"/>
    <param name="bowtieGenomicIndexDir"/>
    <param name="bowtieTranscriptIndexDir"/>
    <param name="genomicSeqsFile"/>
    <param name="genomicSeqsDir"/>
    <param name="ssaGeneModelFile"/>

    <constant name="dataDir">$$parentDataDir$$/pfDuffyRnaSeq</constant>
    <constant name="samplesDataDir">$$dataDir$$/samples</constant>
    <constant name="seqCoverageAndIntensityDataDir">$$dataDir$$/seqCoverageAndIntensity</constant>

    <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="makeSeqCoverageAndIntensityDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makeSamplesDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$samplesDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="makeSamplesDataDir"/>
    </step>

    <subgraph name="Pf_RNASeq_Duffy_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Pf_RNASeq_Duffy_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <subgraph name="analyzePL01Sample" xmlFile="analyzeRnaSeqOrChipSeqSample.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">PL01</paramValue>
      <paramValue name="bowtieGenomicIndexDir">$$bowtieGenomicIndexDir$$</paramValue>
      <paramValue name="bowtieTranscriptIndexDir">$$bowtieTranscriptIndexDir$$</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/Pf_RNASeq_Duffy_RSRC/final/PL01.fsa</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/analyzePL01/PL01.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/PL01.int</paramValue>
      <paramValue name="computePeaks">false</paramValue>
      <paramValue name="readType">single</paramValue>
      <paramValue name="isChipSeq">false</paramValue>
      <paramValue name="rnaSeqExtDbRlsSpec">Pf_RNASeq_Duffy_RSRC|@@Pf_RNASeq_Duffy_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">Pfalciparum_chromosomes_RSRC|@@Pfalciparum_chromosomes_VER@@</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="Pf_RNASeq_Duffy_RSRC"/>
      <depends name="mirrorToCluster"/>
    </subgraph>

    <subgraph name="analyzePL02Sample" xmlFile="analyzeRnaSeqOrChipSeqSample.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">PL02</paramValue>
      <paramValue name="bowtieGenomicIndexDir">$$bowtieGenomicIndexDir$$</paramValue>
      <paramValue name="bowtieTranscriptIndexDir">$$bowtieTranscriptIndexDir$$</paramValue>
      <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/Pf_RNASeq_Duffy_RSRC/final/PL02.fsa</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/analyzePL02/PL02.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/PL02.int</paramValue>
      <paramValue name="computePeaks">false</paramValue>
      <paramValue name="readType">single</paramValue>
      <paramValue name="isChipSeq">false</paramValue>
      <paramValue name="rnaSeqExtDbRlsSpec">Pf_RNASeq_Duffy_RSRC|@@Pf_RNASeq_Duffy_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">Pfalciparum_chromosomes_RSRC|@@Pfalciparum_chromosomes_VER@@</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="Pf_RNASeq_Duffy_RSRC"/>
      <depends name="mirrorToCluster"/>
    </subgraph>

    <subgraph name="analyze3D7Sample" xmlFile="analyzeRnaSeqOrChipSeqSample.xml">
      <paramValue name="parentDataDir">$$samplesDataDir$$</paramValue>
      <paramValue name="sampleName">3D7</paramValue>
      <paramValue name="bowtieGenomicIndexDir">$$bowtieGenomicIndexDir$$</paramValue>
      <paramValue name="bowtieTranscriptIndexDir">$$bowtieTranscriptIndexDir$$</paramValue>
      <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/Pf_RNASeq_Duffy_RSRC/final/3D7.fsa</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/analyze3D7/3D7.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/3D7.int</paramValue>
      <paramValue name="computePeaks">false</paramValue>
      <paramValue name="readType">single</paramValue>
      <paramValue name="isChipSeq">false</paramValue>
      <paramValue name="rnaSeqExtDbRlsSpec">Pf_RNASeq_Duffy_RSRC|@@Pf_RNASeq_Duffy_VER@@</paramValue>
      <paramValue name="genomeExtDbSpec">Pfalciparum_chromosomes_RSRC|@@Pfalciparum_chromosomes_VER@@</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="Pf_RNASeq_Duffy_RSRC"/>
      <depends name="mirrorToCluster"/>
    </subgraph>

    <step name="mergeIntensityFiles" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MergeIntensityFiles">
      <paramValue name="inputFilesDir">$$samplesDataDir$$</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/profiles.txt</paramValue>
      <depends name="makeSeqCoverageAndIntensityDataDir"/>
      <depends name="analyzePL01Sample"/>
      <depends name="analyzePL02Sample"/>
      <depends name="analyze3D7Sample"/>
    </step>

    <step name="makePercentileProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::DoNothingStep">
      <paramValue name="inputFile">$$seqCoverageAndIntensityDataDir$$/profiles.txt</paramValue>
      <paramValue name="outputFile">$$seqCoverageAndIntensityDataDir$$/percents.txt</paramValue>
      <depends name="mergeIntensityFiles"/>
    </step>

    <step name="loadIntensityProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertExpressionProfiles" stepLoadTypes="plugin">
      <paramValue name="configFile">$$dataDir$$/Pf_RNASeq_Duffy_RSRC/final/config.txt</paramValue>
      <paramValue name="inputDir">$$seqCoverageAndIntensityDataDir$$</paramValue>
      <paramValue name="extDbRlsSpec">Pf_RNASeq_Duffy_RSRC|@@Pf_RNASeq_Duffy_VER@@</paramValue>
      <depends name="makePercentileProfile"/>
    </step>

</workflowGraph>
