<workflowGraph name="pfDuffyRnaSeq">
    <param name="parentDataDir"/>
    <param name="organismResourceXmlFile"/>
    <param name="blatGenomicIndexFile"/>
    <param name="bowtieGenomicIndexFile"/>
    <param name="bowtieTranscriptsIndexFile"/>
    <param name="genomicSeqsFile"/>
    <param name="ssaGeneModelFile"/>

    <constant name="dataDir">$$parentDataDir$$/pfDuffyRnaSeq</constant>
    <constant name="samplesDataDir">$$dataDir$$/samples</constant>

    <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="makeSamplesDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$samplesDataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <subgraph name="duffyRnaSeqResource" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Pf_RNASeq_Duffy_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <subgraph name="analyzeDuffyRnaSeqPL01Sample" xmlFile="analyzeRnaSeqSample.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="sampleName">PL01</paramValue>
      <paramValue name="bowtieGenomicIndexFile">$$bowtieGenomicIndexFile$$</paramValue>
      <paramValue name="bowtieTranscriptIndexFile">$$bowtieTranscriptIndexFile$$</paramValue>
      <paramValue name="blatGenomicIndexFile">$$blatGenomicIndexFile$$</paramValue>
      <paramValue name="geneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/duffyRnaSeqResource/PL01.fsa</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/PL01.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/PL01.int</paramValue>
      <paramValue name="readType">single</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="duffyRnaSeqResource"/>
    </subgraph>

    <subgraph name="analyzeDuffyRnaSeqPL02Sample" xmlFile="analyzeRnaSeqSample.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="sampleName">PL02</paramValue>
      <paramValue name="bowtieGenomicIndexFile">$$bowtieGenomicIndexFile$$</paramValue>
      <paramValue name="bowtieTranscriptIndexFile">$$bowtieTranscriptIndexFile$$</paramValue>
      <paramValue name="blatGenomicIndexFile">$$blatGenomicIndexFile$$</paramValue>
      <paramValue name="geneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/duffyRnaSeqResource/PL02.fsa</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/PL02.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/PL02.int</paramValue>
      <paramValue name="readType">single</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="duffyRnaSeqResource"/>
    </subgraph>

    <subgraph name="analyzeDuffyRnaSeq3D7Sample" xmlFile="analyzeRnaSeqSample.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="sampleName">3D7</paramValue>
      <paramValue name="bowtieGenomicIndexFile">$$bowtieGenomicIndexFile$$</paramValue>
      <paramValue name="bowtieTranscriptIndexFile">$$bowtieTranscriptIndexFile$$</paramValue>
      <paramValue name="blatGenomicIndexFile">$$blatGenomicIndexFile$$</paramValue>
      <paramValue name="geneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="shortSeqsFile">$$dataDir$$/duffyRnaSeqResource/3D7.fsa</paramValue>
      <paramValue name="outputCoverageFile">$$samplesDataDir$$/3D7.cov</paramValue>
      <paramValue name="outputIntensityFile">$$samplesDataDir$$/3D7.int</paramValue>
      <paramValue name="readType">single</paramValue>
      <depends name="makeSamplesDataDir"/>
      <depends name="duffyRnaSeqResource"/>
    </subgraph>

    <step name="mergeIntensityFilesAndMakeProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::DoNothingStep">
      <paramValue name="inputFilesDir">$$samplesDataDir$$</paramValue>
      <paramValue name="outputDir">$$dataDir$$/seqCoverageAndIntensity</paramValue>
      <paramValue name="outputFile">$$dataDir$$/seqCoverageAndIntensity/config.txt</paramValue>
      <depends name="analyzeDuffyRnaSeqPL01Sample"/>
      <depends name="analyzeDuffyRnaSeqPL02Sample"/>
      <depends name="analyzeDuffyRnaSeq3D7Sample"/>
    </step>

    <step name="loadIntensityProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertExpressionProfiles" stepLoadTypes="plugin">
      <paramValue name="configFile">$$dataDir$$/seqCoverageAndIntensity/config.txt</paramValue>
      <paramValue name="inputDir">$$dataDir$$/seqCoverageAndIntensity</paramValue>
      <paramValue name="extDbRlsSpec">Pf_RNASeq_Duffy_RSRC|@Pf_RNASeq_Duffy_VER@</paramValue>
      <depends name="mergeIntensityFilesAndMakeProfile"/>
    </step>

</workflowGraph>
