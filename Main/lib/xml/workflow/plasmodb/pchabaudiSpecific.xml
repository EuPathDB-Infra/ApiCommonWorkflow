<workflowGraph name="pchabaudiSpecific">
  <param name="projectName"/>
  <param name="projectVersion"/>
  <param name="parentDataDir"/>
  <param name="organismResourceXmlFile"/>
  <param name="downloadSiteDataDir"/>

  <constant name="dataDir">$$parentDataDir$$/@PcOrganismName@Specific</constant>
  <constant name="downloadSiteDataDir">$$downloadSiteDataDir$$/@PcOrganismName@</constant>
  <constant name="genomicSeqsFile">$$parentDataDir$$/@PcOrganismName@LoadGenome/genomicSeqs.fsa</constant>


  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

    <subgraph name="mapIsolatesToGenome" xmlFile="plasmodb/plasmoMapIsolatesToGenome.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="organismName">@PcOrganismName@</paramValue>
      <paramValue name="genomeExtDbRlsSpec">Pchabaudi_chromosomes_RSRC|@Pchabaudi_chromosomes_VER@</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <depends name="makeDataDir"/>
      <dependsGlobal name="isolatesResource"/>
    </subgraph>

    <subgraph name="Pc_CorrectGeneAliases_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Pc_CorrectGeneAliases_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

  <step name="makeGeneAliasesMappingFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeGeneAliasesMappingFile">
     <paramValue name="genomeExtDbRlsSpec">Pchabaudi_chromosomes_RSRC|@Pchabaudi_chromosomes_VER@</paramValue>
     <paramValue name="outputFile">$$downloadSiteDataDir$$/@PcOrganismName@GeneAlias_$$projectName$$-$$projectVersion$$.txt</paramValue>
    <depends name="correctGeneAliasesResource"/>
  </step>

  <subgraph name="dbxRefsResources" xmlFile="plasmodb/pchabaudiDbxRefsResource.xml">
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="euPathUniProtLinkDownloadFile">$$downloadSiteDataDir$$/@PcOrganismName@EuPathUniProtLinks_$$projectName$$-$$projectVersion$$.txt</paramValue>
    <paramValue name="projectName">$$projectName$$</paramValue>
    <depends name="correctGeneAliasesResource"/>
  </subgraph>

    <subgraph name="GOAssociations_Pchabaudi_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">GOAssociations_Pchabaudi_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
      <dependsGlobal name="GOResource"/>
      <dependsGlobal name="GOEvidenceCodesResource"/>
    </subgraph>

    <subgraph name="Pchabaudi_ECNumbers_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">Pchabaudi_ECNumbers_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
      <dependsGlobal name="enzymeDBResource"/>
    </subgraph>

</workflowGraph>
