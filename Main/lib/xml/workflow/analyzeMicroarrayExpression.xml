<workflowGraph name="analyzeMicroarrayExpression">
    <param name="parentDataDir"/>
    <param name="experimentResourceName"/>
    <param name="chipProbeExtDbRlsSpec"/>
    <param name="experimentExtDbRlsSpec"/>
    <param name="genomeExtDbRlsSpec"/>
    <param name="insertAnalysisResult"/>

    <constant name="dataDir">$$parentDataDir$$/analyze_ChIP_Chip_$$experimentResourceName$$</constant>

    <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="runTranscriptExpressionScript" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::DoNothingStep">
      <paramValue name="inputFile">$$dataDir$$</paramValue>
      <paramValue name="outputDir">$$dataDir$$/transcriptExpression</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="loadExpressionProfilesFromConfig" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertExpressionProfiles" stepLoadTypes="plugin">
      <paramValue name="inputDir">$$dataDir$$/transcriptExpression</paramValue>
      <paramValue name="configFile">$$parentDataDir$$/$$experimentResourceName$$/expression_profile_config.txt</paramValue>
      <paramValue name="extDbRlsSpec">$$experimentExtDbRlsSpec$$</paramValue>
      <depends name="runTranscriptExpressionScript"/>
    </step>

    <step name="insertAnalysisResultFromConfig" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertSimpleRadAnalysisFromConfig" stepLoadTypes="plugin" includeIf="$$insertAnalysisResult$$">
      <paramValue name="analysisWorkingDir">$$dataDir$$/transcriptExpression</paramValue>
      <paramValue name="configFile">$$parentDataDir$$/$$experimentResourceName$$/analysis_result_config.txt</paramValue>
      <paramValue name="analysisResultView">DataTransformationResult</paramValue>
      <paramValue name="naFeatureView">ArrayElementFeature</paramValue>
      <paramValue name="useSqlLdr">false</paramValue>
      <depends name="runTranscriptExpressionScript"/>
    </step>

</workflowGraph>
