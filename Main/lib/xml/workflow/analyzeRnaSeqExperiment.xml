<workflowGraph name="">
    <param name="projectName"/>
    <param name="organismAbbrev"/>
    <param name="experimentName"/>
    <param name="parentDataDir"/>
    <param name="relativeDownloadSiteDir"/>
    <param name="experimentResourceName"/>
    <param name="experimentResourceVersion"/>

    <!--  these were made in the experiment graph -->
    <constant name="experimentDataDir">$$parentDataDir$$/$$experimentName$$</constant>
    <constant name="samplesOutputDir">$$experimentDataDir$$/samplesOutput</constant>

    <step name="doTranscriptExpression" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::DoTranscriptExpression">
      <paramValue name="analysisConfigFile">$$experimentDataDir$$/$$experimentResourceName$$/final/analysisConfig.xml</paramValue>
      <paramValue name="inputDir">$$samplesOutputDir$$</paramValue>
      <paramValue name="outputDir">$$experimentDataDir$$/doTranscriptExpression</paramValue>
      <!-- The ancillary file will mostly be unused;  Only here so we can fiddle with the profiles (like scaliing)   -->
      <paramValue name="geneProbeMappingTabFile">ancillary.txt</paramValue>
      <paramValue name="geneProbeMappingVendorFile"></paramValue>
      <paramValue name="platformDirectory">$$experimentDataDir$$/$$experimentResourceName$$/final</paramValue>
      <paramValue name="expectCdfFile">false</paramValue>
      <paramValue name="expectNdfFile">false</paramValue>
      <paramValue name="passPlatformMappingFile">false</paramValue>
    </step>

    <step name="document-analyzeRnaSeqExperiment"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">analyzeRnaSeqExperiment_MTHD</paramValue>
      <paramValue name="version">1.0</paramValue>
      <paramValue name="parameters">TODO: patch in later</paramValue>
    </step>

    <step name="loadIntensityProfile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertExpressionProfiles"  stepLoadTypes="plugin">
      <paramValue name="configFile">$$experimentDataDir$$/doTranscriptExpression/expression_profile_config.txt</paramValue>
      <paramValue name="inputDir">$$experimentDataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="extDbRlsSpec">$$experimentResourceName$$|$$experimentResourceVersion$$</paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

    <step name="copyExpressionProfilesToDownloadDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CopyExpressionProfilesToDownloadDir">
      <paramValue name="configFile">$$experimentDataDir$$/doTranscriptExpression/expression_profile_config.txt</paramValue>
      <paramValue name="copyFromDir">$$experimentDataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="relativeDir">$$relativeDownloadSiteDir$$</paramValue>
      <depends name="doTranscriptExpression"/>
    </step>

    <step name="loadAnalysisResult" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertSimpleRadAnalysisFromConfig" stepLoadTypes="plugin">
      <paramValue name="analysisWorkingDir">$$experimentDataDir$$/doTranscriptExpression</paramValue>
      <paramValue name="configFile">$$experimentDataDir$$/doTranscriptExpression/analysis_result_config.txt</paramValue>
      <paramValue name="analysisResultView">DifferentialExpression</paramValue>
      <paramValue name="naFeatureView">GeneFeature</paramValue>
      <paramValue name="useSqlLdr">false</paramValue>
      <depends name="loadIntensityProfile"/>
    </step>

</workflowGraph>
