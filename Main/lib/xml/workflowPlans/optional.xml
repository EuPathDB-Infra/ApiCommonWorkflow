<workflowGraph name="">
  <param name="projectName"/>
  <param name="organismAbbrev"/>
  <param name="organismResourceXmlFile"/>
  <param name="parentDataDir"/>
  <param name="genomeExtDbRlsSpec"/>
  <param name="maxIntronSize"/>
  <param name="relativeDownloadSiteDir"/>

  <constant name="dataDir">$$parentDataDir$$/optionalAnalysis</constant>
  <constant name="genomicSeqsFile">$$parentDataDir$$/loadGenome/genomicSeqs.fsa</constant>


  <constant name="genomicSeqsFile">$$parentDataDir$$/LinfantumLoadGenome/genomicSeqs.fsa</constant>
  <constant name="genomicSeqsFileForSsa">$$parentDataDir$$/LinfantumLoadGenome/genomicSeqsForSsa.fsa</constant>
  <constant name="transcriptSeqsFileForSsa">$$parentDataDir$$/LinfantumLoadGenome/transcriptSeqsForSsa.fsa</constant>
  <constant name="ssaGeneModelFile">$$parentDataDir$$/LinfantumLoadGenome/geneModelForSsa.txt</constant>
  <constant name="samHeaderFile">$$parentDataDir$$/LinfantumLoadGenome/samHeader</constant>


  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
    <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
  </step>

  <datasetTemplate class="isolates_genbank">
    <subgraph name="mapGenbankIsolatesToGenome" xmlFile="mapIsolatesToGenome.xml">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
     <paramValue name="isolatesExtDbRlsSpec">$$organismAbbrev$$_isolates_genbank_RSRC|TODAY</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate class="isolatesFeaturesGFF2">
    <prop name="name"/>
    <prop name="version"/>

    <subgraph name="$$organismAbbrev$$_isolate_$$name$$_sequences_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$organismAbbrev$_isolate_$$name$$_sequences_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <subgraph name="map${name}IsolatesToGenome" xmlFile="mapIsolatesToGenome.xml">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
      <paramValue name="organismName">$$organismName$$</paramValue>
      <paramValue name="isolatesExtDbRlsSpec">${name}|${version}</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <depends name="$$organismAbbrev$_isolate_${name}_sequences_RSRC"/>
    </subgraph>
  </datasetTemplate>

  <!-- this subgraph might be empty, if there are no array studies -->
  <subgraph name="arrayResources" xmlFile="$$projectName$$/$$organismAbbrev$$/arrayStudies.xml">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
    <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
    <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="relativeDownloadSiteDir">$$relativeDownloadSiteDir$$</paramValue>
    <depends name="makeDataDir"/>
  </subgraph>

  <datasetTemplate class="clonedInsertEnds">
    <prop name="name"/>
    <prop name="version"/>
    <prop name="repeatMaskSpecies"/>
    <subgraph name="${name}_clonedInsertEnds_loadAndAnalyze" xmlFile="loadAndAnalyzeClonedInsertEnds.xml">
      <paramValue name="dataDir">$$dataDir$$/${name}_BAC_ends_loadAndAnalyze</paramValue>
      <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="clonedInsertEndsExtDbRlsSpec">${name}_RSRC|${version}</paramValue>
      <paramValue name="maxIntronSize">$$maxIntronSize$$</paramValue>
      <paramValue name="ncbiTaxonId">$$ncbiTaxonId$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="repeatMaskSpeciesOption">-species ${repeatMaskSpecies}</paramValue>
      <paramValue name="genomicSeqsDir">$$parentDataDir$$/$$organismAbbrev$$_LoadGenome/genomicSeqs</paramValue>
      <depends name="mirrorToCluster"/>
    </subgraph>
  </datasetTemplate>

  <!-- this subgraph might be empty, if there are no array studies -->
  <subgraph name="snps" xmlFile="$$projectName$$/$$organismAbbrev$$/SNPs.xml">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
    <depends name="makeDataDir"/>
  </subgraph>

  <datasetTemplate class="sageTagSequences">
    <prop name="name"/>

    <subgraph name="$$organismAbbrev$$_sageTag_${name}_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$organismAbbrev$$_sageTag_${name}_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <subgraph name="mapSageTags" xmlFile="mapSageTags.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="sageTagExtDbRlsSpec">WirthSageTagArrayDesign_RSRC|@@WirthSageTagArrayDesign_VER@@</paramValue>
      <paramValue name="studyName">Transcriptional profile of P.falciparum by Serial analysis of gene expression</paramValue>
      <paramValue name="nickName">mapSageTags</paramValue>   
      <paramValue name="calFreq">true</paramValue>
      <depends name="$$organismAbbrev$$_sageTag_${name}_RSRC"/>
    </subgraph>

  </datasetTemplate>

  <!-- double check that loading sage tag freqs does not depend on map of seqs to genome -->
  <datasetTemplate class="sageTagFrequencies">
    <prop name="name"/>
    <prop name="version"/>
    <prop name="normalizeFrequencies"/>

    <subgraph name="$$organismAbbrev$$_sageTag_${name}_frequencies_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$organismAbbrev$$_sageTag_${name}_frequencies_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="$$organismAbbrev$$_sageTag_${name${_RSRC"/>
    </subgraph>

    <step name="${name}_createSageTagNormFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CreateSageTagNormFile" stepLoadTypes="plugin" includeIf="${normalizeFrequencies}">

      <paramValue name="studyName">$$name$$</paramValue>
      <paramValue name="outputDir">$$dataDir$$</paramValue>
      <depends name="$$organismAbbrev$$_sageTag_${name}_frequencies_RSRC"/>
    </step>

    <step name="${name}_insertNormSageTagFreqs" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertNormSageTagFreqs" stepLoadTypes="plugin" includeIf="${normalizeFrequencies}">
      <paramValue name="inputDir">$$dataDir$$</paramValue>
      <paramValue name="studyName">$$name$$</paramValue>
      <depends name="${name${_createSageTagNormFile"/>
    </step>
  </datasetTemplate>

  <datasetTemplate class="genomeFeatures_GFF2">
    <prop name="name"/> 
    <subgraph name="genomeFeature_${name}_GFF2_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">genomeFeature_${name}_GFF2_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetTemplate>

</workflowGraph>



