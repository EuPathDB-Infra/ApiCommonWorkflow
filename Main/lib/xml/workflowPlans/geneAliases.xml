<workflowGraph name="">
  <param name="organismResourceXmlFile"/>
  <param name="parentDataDir"/>
  <param name="projectVersion"/>
  <param name="projectName"/>
  <param name="downloadSiteDataDir"/>
  <param name="organismNameForFiles"/>
  <param name="genomeExtDbRlsSpec"/>

  <constant name="dataDir">$$parentDataDir$$/geneAliases</constant>
  <constant name="geneAliasesMappingDownloadFile">$$downloadSiteDataDir$$/$$organismNameForFiles$$/txt/$$organismNameForFiles$$_GeneAlias_$$projectName$$-$$projectVersion$$.txt</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <datasetTemplate class="GeneDB_GFF_gene_aliases">
    <prop name="version"/>
    <subgraph name="$$orgAbbrev$$_GeneDB_GFF_gene_aliases_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$orgAbbrev$$_GeneDB_GFF_gene_aliases_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <step name="makeGeneAliasesDownloadFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeGeneAliasesMappingFile">
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="dbRefNAFeatureExtDbSpec">$$orgAbbrev$$_GeneDB_GFF_gene_aliases_RSRC|${version}</paramValue>
      <paramValue name="outputFile">$$geneAliasesMappingDownloadFile$$</paramValue>
      <depends name="GeneDB_GFF_gene_aliases"/>
    </step>
  </datasetTemplate>

</workflowGraph>

