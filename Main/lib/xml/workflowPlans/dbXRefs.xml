<workflowGraph name="tcruziEsmeraldoLikeDbxRefsResource">
  <param name="organismResourceXmlFile"/>
  <param name="parentDataDir"/>

  <constant name="dataDir">$$parentDataDir$$/dbXRefs</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <datasetClass class="dbxref_simple">
    <prop name="name"/>
    <subgraph name="$$orgAbbrev$$_dbxref_$$name$$_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$orgAbbrev$$_dbxref_$$name$$_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetClass>
  
  <datasetClass class="dbxref_ApiLoc">
    <subgraph name="$$orgAbbrev$$_dbxref_ApiLoc_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$orgAbbrev$$_dbxref_ApiLoc_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetClass>
  
  <datasetClass class="dbxref_gene2Entrez">
    <subgraph name="$$orgAbbrev$$_dbxref_gene2Entrez_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$orgAbbrev$$_dbxref_gene2Entrez_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetClass>
  
  <datasetClass class="dbxref_gene2Uniprot">
    <subgraph name="$$orgAbbrev$$_dbxref__RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$orgAbbrev$$_dbxref__RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetClass>
  
</workflowGraph>
