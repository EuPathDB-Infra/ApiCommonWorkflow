<workflowGraph name="analyzeChipChipSamples">
  <param name="parentDataDir"/>
  <param name="organismResourceXmlFile"/>
  <param name="experimentResourceName"/>
  <param name="chipProbeExtDbRlsSpec"/>
  <param name="genomeExtDbRlsSpec"/>
  <param name="peakFinderArgs"/>
  <param name="runPeakCalls"/>

  <constant name="dataDir">$$parentDataDir$$/analyzeSamples</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>


  <datasetTemplate name="chipChipSample">
    <prop name="ncbiTaxId"/>
    <prop name="sampleName"/>
    <prop name="sampleOrder"/>
    <prop name="peakFinderArgs"/>
    <prop name="runPeakCalls"/>
    <prop name="experimentName"/>

    <subgraph name="${orgAbbrev${_${experimentName${_chipChip_sample_${sampleName}" xmlFile="analyzeChipChipSample.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="experimentResourceName">$$experimentResourceName$$</paramValue>
      <paramValue name="chipProbeExtDbRlsSpec">$$chipProbeExtDbRlsSpec$$</paramValue>
      <paramValue name="inputSampleFile">${sampleName}.norm</paramValue>
      <paramValue name="sampleName">${sampleName}</paramValue>
      <paramValue name="sampleOrder">${sampleOrder}</paramValue>
      <paramValue name="peakFinderArgs">${peakFinderArgs}</paramValue>
      <paramValue name="runPeakCalls">${runPeakCalls}</paramValue>
      <paramValue name="ncbiTaxId">${ncbiTaxId}</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

  </datasetTemplate>


</workflowGraph>
