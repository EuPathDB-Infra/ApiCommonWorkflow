<workflowGraph name="arrayResources">
  <param name="parentDataDir"/>
  <param name="organismResourceXmlFile"/>
  <param name="ssaGeneModelFile"/>
  <param name="genomicSeqsFileForSsa"/>
  <param name="transcriptSeqsFileForSsa"/>
  <param name="downloadSiteTranscriptExpressionDataDir"/>
  <param name="genomeExtDbRlsSpec"/>

  <constant name="dataDir">$$parentDataDir$$/arrayResources</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <step name="mirrorToCluster" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MirrorToComputeCluster">
    <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
    <depends name="makeDataDir"/>
  </step>

  <datasetClass class="microarrayPlatform">
    <prop name="project"/>
    <prop name="orgAbbrev"/>
    <prop name="name"/>
    <prop name="version"/>
    <prop name="isOneChannel"/>
    <prop name="limitNU"/>
    <prop name="numInsertions"/>
    <prop name="dnaHybridization"/>
    <prop name="countMismatches"/>
    <prop name="isNimbleGen"/>
    
    <subgraph name="&&name&&_getAndMapProbes" xmlFile="getAndMapProbes.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="probeResourceName">&&name&&</paramValue>
      <paramValue name="chipProbeExtDbRlsSpec">&&name&&|&&version&&</paramValue>
      <paramValue name="isOneChannel">&&isOneChannel&&</paramValue>
      <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="ssaGeneModelFile">$$ssaGeneModelFile$$</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa"></paramValue>
      <paramValue name="limitNU">30</paramValue>
      <paramValue name="numInsertions">1</paramValue>
      <paramValue name="dnaHybridization">true</paramValue>
      <paramValue name="pairedReadFilePath"></paramValue>
      <paramValue name="countMismatches">false</paramValue>
      <paramValue name="cdfFileName"></paramValue>
      <paramValue name="isNimbleGen">false</paramValue>
      <paramValue name="ndfFileName"></paramValue>
      <depends name="mirrorToCluster"/>
    </subgraph>
  </datasetClass>

  <datasetClass name="chipChipExperiment">
    <prop name="experimentName"/>
    <prop name="experimentVersion"/>
    <prop name="microArrayPlatformName"/>
    <prop name="microArrayPlatformVersion"/>
    <prop name="peakFinderArgs"/>
    <prop name="runPeakCalls"/>

    <subgraph name="&&experimentName&&" xmlFile="loadResource.xml">
      <paramValue name="resourceName">&&experimentName&&</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="&&microArrayPlatformName&&_getAndMapProbes"/>
    </subgraph>

    <subgraph name="&&experimentName&&_chipChipSamples" xmlFile="&&experimentName&&_chipChipSamples.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="experimentResourceName">&&experimentName&&</paramValue>
      <paramValue name="chipProbeExtDbRlsSpec">&&microArrayPlatformName&&|&&microArrayPlatformVersion&&</paramValue>
      <paramValue name="peakFinderArgs">&&peakFinderArgs&&</paramValue>
      <paramValue name="runPeakCalls">&&runPeakCalls&&</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <depends name="&&experimentName&&"/>
    </subgraph>
  </datasetClass>

  <datasetClass name="microarrayExpressionExperiment">
    <prop name="experimentName"/>
    <prop name="experimentVersion"/>
    <prop name="experimentDisplayName"/>
    <prop name="microArrayPlatformName"/>
    <prop name="microArrayPlatformVersion"/>
    <prop name="insertAnalysisResult"/>
    <prop name="profileSetNames"/>
    <prop name="profileSetSpecs"//>
    <prop name="isLogged"/>
    <prop name="mappingFileForExpressionStats"/>


    <subgraph name="&&experimentName&&" xmlFile="loadResource.xml">
      <paramValue name="resourceName">&&experimentName&&</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="&&microArrayPlatformName&&_getAndMapProbes"/>
    </subgraph>

    <subgraph name="&&experimentName&&_analyzeMicroarrayExperiment" xmlFile="analyzeMicroarrayExperiment.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="experimentResourceName">&&experimentName&</paramValue>
      <paramValue name="experimentResourceVersion">&&experimentVersion&&</paramValue>
      <paramValue name="chipProbeExtDbRlsSpec">&&microArrayPlatformName&&|&&microArrayPlatformVersion&&</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="insertAnalysisResult">false</paramValue>
      <paramValue name="probeGenesMappingFile">$$dataDir$$/&&microArrayPlatformName&&_getAndMapProbes/&&microArrayPlatformName&&/probesMapping.cdf</paramValue>
      <paramValue name="profileSetNames">&&profileSetNames&&</paramValue>
      <paramValue name="profileSetSpecs">&&profileSetSpecs&&</paramValue>
      <paramValue name="isLogged">&&isLogged&&</paramValue>
      <paramValue name="mappingFileForExpressionStats">&&mappingFileForExpressionStats&&</paramValue>
      <paramValue name="calculateExpressionStats">&&calculateExpressionStats&&</paramValue>
      <paramValue name="downloadSiteTranscriptExpressionDataDir">$$downloadSiteTranscriptExpressionDataDir$$/&&experimentNameForFiles&&</paramValue>
      <depends name="&&experimentName&&"/>
    </subgraph>
  </datasetClass>

</workflowGraph>
