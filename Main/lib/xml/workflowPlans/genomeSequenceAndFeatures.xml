<workflowGraph name="">
  <param name="organismResourceXmlFile"/>
  <param name="dataDir"/>
  <param name="organismAbbrev"/>

  <constant name="dataDir">$$dataDir$$/loadGenome</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <datasetTemplate class="genbank_primary_genome">
    <prop name="name"/>
    <prop name="soTerm"/>
    <subgraph name="$$organismAbbrev$$_${soTerm}_${name}_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$organismAbbrev$$_${soTerm}_${name}_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate class="genbank_secondary_genome">
    <prop name="name"/>
    <prop name="soTerm"/>
    <prop name="parentDataset"/>
    <subgraph name="$$organismAbbrev$$_${soTerm}_${name}_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$organismAbbrev$$_${soTerm}_${name}_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
      <depends name="${parentDataset}"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate name="GeneDB_GFF_genome_sequence">
    <prop name="name"/>
    <subgraph name="$$organismAbbrev$$_genome_GeneDB_GFF_sequence_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$organismAbbrev$$_genome_GeneDB_GFF_sequence_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
      <depends name="${parentDataset}" selfAllowed="true"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate name="GeneDB_GFF_genome_features">
    <subgraph name="$$organismAbbrev$$_genome_GeneDB_GFF_features_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$organismAbbrev$$_genome_GeneDB_GFF_features_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="$$organismAbbrev$$_genome_GeneDB_GFF_sequence_RSRC"/>
    </subgraph>
  </datasetTemplate>

</workflowGraph>
