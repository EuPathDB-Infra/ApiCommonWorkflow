<workflowGraph name="">
  <param name="organismResourceXmlFile"/>
  <param name="dataDir"/>

  <constant name="dataDir">$$dataDir$$/loadGenome</constant>

  <step name="makeDataDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <datasetClass name="genbank_genome">
    <prop name="name"/>
    <prop name="version"/>
    <subgraph name="$$orgAbbrev$$_genome_$$name$$_genbank_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$orgAbbrev$$_genome_$$name$$_genbank_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetClass>

  <datasetClass name="GeneDB_GFF_genome_sequence">
    <prop name="name"/>
    <subgraph name="$$orgAbbrev$$_genome_GeneDB_GFF_sequence_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$orgAbbrev$$_genome_GeneDB_GFF_sequence_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetClass>

  <datasetClass name="GeneDB_GFF_genome_features">
    <subgraph name="$$orgAbbrev$$_genome_GeneDB_GFF_features_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$orgAbbrev$$_genome_GeneDB_GFF_features_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetClass>

  <datasetClass name="genome_chromosome_assembly_agp">
    <subgraph name="$$orgAbbrev$$_genome_chromosome_assembly_agp_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$orgAbbrev$$_genome_chromosome_assembly_agp_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetClass>
</workflowGraph>
