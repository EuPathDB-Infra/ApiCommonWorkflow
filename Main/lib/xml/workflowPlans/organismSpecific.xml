<workflowGraph name="">
  <param name="projectName"/>
  <param name="organismAbbrev"/>
  <param name="organismResourceXmlFile"/>
  <param name="parentDataDir"/>
  <param name="genomeExtDbRlsSpec"/>
  <param name="maxIntronSize"/>
  <param name="relativeDownloadSiteDir"/>
  <param name="genomicSeqsFileForSsa"/>
  <param name="transcriptSeqsFileForSsa"/>
  <param name="geneModelFileForSsa"/>
  <param name="genomicSeqsFile"/>
  <param name="genomicSeqsDir"/>
  <param name="isHaploid"/>
  <param name="isAnnotatedGenome"/>

  <constant name="dataDir">$$parentDataDir$$/organismSpecific</constant>
  <constant name="genomicSeqsFileForSsa">$$dataDir$$/genomicSeqsForSsa.fsa</constant>
  <constant name="transcriptSeqsFileForSsa">$$dataDir$$/transcriptSeqsForSsa.fsa</constant>
  <constant name="geneModelFileForSsa">$$dataDir$$/geneModelForSsa.txt</constant>
  <constant name="cdsModelFileForSsa">$$dataDir$$/cdsModelForSsa.txt</constant>

  <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <subgraph name="extractFilesForSsa" xmlFile="extractFilesForSsa.xml">
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="useTopLevel">false</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="geneModelFileForSsa">$$geneModelFileForSsa$$</paramValue>
      <paramValue name="cdsModelFileForSsa">$$geneModelFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="isAnnotatedGenome">$$isAnnotatedGenome$$</paramValue>
      <depends name="makeDataDir"/>
  </subgraph>

  <step name="mirrorToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster">
    <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="extractFilesForSsa"/>
  </step>

  <datasetTemplate class="isolatesGenbank">
    <prop name="organismAbbrev"/>

    <subgraph name="${organismAbbrev}_isolates_genbank" xmlFile="loadResource.xml"  externalName="${organismAbbrev}_isolates_genbank">
      <paramValue name="resourceName">${organismAbbrev}_isolates_genbank_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate class="isolateSequencesFasta">
    <prop name="organismAbbrev"/>
    <prop name="name"/>
    <prop name="version"/>

    <subgraph name="${organismAbbrev}_isolates_${name}" xmlFile="loadResource.xml" externalName="${organismAbbrev}_isolates_${name}">
      <paramValue name="resourceName">${organismAbbrev}_isolates_${name}_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate class="isolateFeaturesGFF2">
    <prop name="organismAbbrev"/>
    <prop name="name"/>
    <prop name="version"/>

    <subgraph name="${organismAbbrev}_isolates_${name}_features" xmlFile="loadResource.xml">
      <paramValue name="resourceName">${organismAbbrev}_isolates_${name}_features_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="${organismAbbrev}_isolates_${name}"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate class="isolatesFromReferenceStrain">
    <prop name="referenceStrainOrganismAbbrev"/>
    <prop name="name"/>
    <prop name="version"/>

    <subgraph name="map_${name}_IsolatesToGenome" xmlFile="mapIsolatesToGenome.xml">
      <paramValue name="dataDir">$$dataDir$$/${name}_mapIsolatesToGenome</paramValue>
      <paramValue name="isolatesExtDbRlsSpec">${referenceStrainOrganismAbbrev}_isolates_${name}_RSRC|${version}</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <depends name="makeDataDir"/> 
      <dependsExternal name="${referenceStrainOrganismAbbrev}_isolates_${name}"/>
    </subgraph>
  </datasetTemplate>

  <subgraph name="arrayResources" xmlFile="generated/$$projectName$$/$$organismAbbrev$$/arrayStudies.xml" excludeIfXmlFileDoesNotExist="true">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="ssaGeneModelFile">$$geneModelFileForSsa$$</paramValue>
    <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
    <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
    <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="relativeDownloadSiteDir">$$relativeDownloadSiteDir$$</paramValue>
    <depends name="mirrorToCluster"/>
  </subgraph>

  <datasetTemplate class="clonedInsertEnds">
    <prop name="name"/>
    <prop name="version"/>
    <prop name="organismAbbrev"/>

    <subgraph name="${organismAbbrev}_${name}_clonedInsertEnds" xmlFile="loadResource.xml" externalName="${organismAbbrev}_${name}_clonedInsertEnds">
      <paramValue name="resourceName">${organismAbbrev}_${name}_clonedInsertEnds_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate class="clonedInsertEndsFromReferenceStrain">
    <prop name="name"/>
    <prop name="version"/>
    <prop name="referenceStrainOrganismAbbrev"/>

    <subgraph name="${name}_mapClonedInsertEnds" xmlFile="mapClonedInsertEnds.xml">
      <paramValue name="dataDir">$$dataDir$$/${name}_clonedInsertEnds</paramValue>
      <paramValue name="resourceName">${referenceStrainOrganismAbbrev}_${name}_clonedInsertEnds_RSRC</paramValue>
      <paramValue name="resourceVersion">${version}</paramValue>
      <paramValue name="maxIntronSize">$$maxIntronSize$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="referenceStrainOrganismAbbrev">${referenceStrainOrganismAbbrev}</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="genomicSeqsDir">$$genomicSeqsDir$$</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <depends name="mirrorToCluster"/>
      <dependsExternal name="${referenceStrainOrganismAbbrev}_${name}_clonedInsertEnds"/>
    </subgraph>
  </datasetTemplate>

  <subgraph name="snps" xmlFile="generated/$$projectName$$/$$organismAbbrev$$/SNPs.xml"  excludeIfXmlFileDoesNotExist="true">
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
    <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
    <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
    <paramValue name="isHaploid">$$isHaploid$$</paramValue>
    <depends name="makeDataDir"/>
  </subgraph>

  <datasetTemplate class="sageTagSequences">
    <prop name="name"/>
    <prop name="version"/>
    <prop name="organismAbbrev"/>
    <prop name="isMissingCATG"/>
    <prop name="bowtieParams"/>

    <subgraph name="${organismAbbrev}_sageTag_${name}_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">${organismAbbrev}_sageTag_${name}_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

    <subgraph name="${name}_mapSageTags" xmlFile="mapSageTags.xml">
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="genomicSeqsFile">$$genomicSeqsFile$$</paramValue>
      <paramValue name="sageTagExtDbRlsSpec">${organismAbbrev}_sageTag_${name}_RSRC|${version}</paramValue>
      <paramValue name="isMissingCATG">${isMissingCATG}</paramValue>
      <paramValue name="name">${name}</paramValue>   
      <paramValue name="bowtieParams">${bowtieParams}</paramValue>   
      <depends name="${organismAbbrev}_sageTag_${name}_RSRC"/>
    </subgraph>

  </datasetTemplate>

  <datasetTemplate class="sageTagFrequencies">
    <prop name="name"/>
    <prop name="version"/>
    <prop name="normalizeFrequencies"/>
    <prop name="organismAbbrev"/>

    <subgraph name="${organismAbbrev}_sageTag_${name}_frequencies_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">${organismAbbrev}_sageTag_${name}_frequencies_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="${name}_mapSageTags"/>
    </subgraph>

    <step name="${name}_createSageTagNormFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CreateSageTagNormFile" stepLoadTypes="plugin" includeIf="${normalizeFrequencies}">
      <paramValue name="studyName">${name}</paramValue>
      <paramValue name="outputDir">$$dataDir$$</paramValue>
      <depends name="${organismAbbrev}_sageTag_${name}_frequencies_RSRC"/>
    </step>

    <step name="${name}_insertNormSageTagFreqs" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertNormSageTagFreqs" stepLoadTypes="plugin" includeIf="${normalizeFrequencies}">
      <paramValue name="inputDir">$$dataDir$$</paramValue>
      <paramValue name="studyName">${name}</paramValue>
      <depends name="${name}_createSageTagNormFile"/>
    </step>
  </datasetTemplate>

  <datasetTemplate class="genomeFeatures_GFF2">
    <prop name="name"/> 
    <prop name="organismAbbrev"/>
    <subgraph name="genomeFeature_${name}_GFF2_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">${organismAbbrev}_genomeFeature_${name}_GFF2_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate class="GeneOntologyAssociations">
    <prop name="name"/> 
    <prop name="organismAbbrev"/>
    <subgraph name="${organismAbbrev}_${name}_GOAssociations" xmlFile="loadResource.xml">
      <paramValue name="resourceName">${organismAbbrev}_${name}_GOAssociations_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
      <dependsGlobal name="GO_RSRC"/>
      <dependsGlobal name="GO_evidence_codes_RSRC"/>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate class="EnzymeCommissionAssociations">
    <prop name="name"/> 
    <prop name="organismAbbrev"/>
    <subgraph name="${organismAbbrev}_${name}_ECAssociations" xmlFile="loadResource.xml">
      <paramValue name="resourceName">${organismAbbrev}_${name}_ECAssociations_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
      <dependsGlobal name="enzymeDB_RSRC"/>
    </subgraph>
  </datasetTemplate>



</workflowGraph>



