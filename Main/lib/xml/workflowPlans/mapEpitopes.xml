<workflowGraph name="epitopesWorkflow">

    <param name="proteinsFile"/>
    <param name="parentDataDir"/>
    <param name="genomeExtDbRlsSpec"/>
    <param name="organismAbbrev"/>

    <constant name="dataDir">$$parentDataDir$$/iedb</constant>
    <constant name="proteinsFileSimpleDefline">$$dataDir$$/blastDb/proteinsSimpleDefline.fsa</constant>

    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

  <!-- NOTE:
       this file was made from a static file into a plan file so we can have
       this one template.  Its purpose is to allow us to use an externalDepends
       which only work inside a plan file.  this is not actually a dataset
  -->
  <datasetTemplate class="epitopesFromReferenceStrain">

   <step name="extractEpitopeTabFile"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::ExtractEpitopesTabFile">
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="outputFile">$$dataDir$$/epitopes.tab</paramValue>
      <depends name="makeDataDir"/>
      <dependsExternal name="${referenceStrainOrganismAbbrev}_epitope_IEDB_RSRC"/>
    </step>
  </datasetTemplate>

    <step name="makeBlastDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$/blastDb</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="makeProteinsBlastDb" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::FormatNcbiBlastFile">
      <paramValue name="inputFile">$$proteinsFile$$</paramValue>
      <paramValue name="outputBlastDbDir">$$dataDir$$/blastDb</paramValue>
      <paramValue name="formatterArgs">T</paramValue>
      <depends name="makeBlastDir"/>
    </step>

    <step name="doMapping" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MapEpitopesToProteins">
      <paramValue name="inputTabFile">$$dataDir$$/epitopes.tab</paramValue>
      <paramValue name="blastDbDir">$$dataDir$$/blastDb</paramValue>
      <paramValue name="dataDir">$$dataDir$$</paramValue>
      <paramValue name="proteinsFile">$$proteinsFile$$</paramValue>
      <paramValue name="outputMappingFile">$$dataDir$$/mapping.txt</paramValue>
      <paramValue name="idRegex">(\\S+)</paramValue>
      <depends name="makeProteinsBlastDb"/>
    </step>

    <step name="insertEpitopeMapping" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertEpitopeMapping" stepLoadTypes="plugin">
      <paramValue name="inputFile">$$dataDir$$/mapping.txt</paramValue>
      <paramValue name="iedbExtDbRlsSpec">$$organismAbbrev$$_epitope_IEDB_RSRC|@@$$organismAbbrev$$_epitope_IEDB_VER@@</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <depends name="doMapping"/>
    </step>

</workflowGraph>
