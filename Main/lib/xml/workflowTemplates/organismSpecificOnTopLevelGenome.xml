<workflowGraph name="">
  <param name="projectName"/>
  <param name="organismAbbrev"/>
  <param name="organismResourceXmlFile"/>
  <param name="parentDataDir"/>
  <param name="genomeExtDbRlsSpec"/>
  <param name="maxIntronSize"/>
  <param name="relativeDownloadSiteDir"/>
  <param name="genomicSeqsFile"/>
  <param name="genomicSeqsDir"/>
  <param name="isAnnotatedGenome"/>

  <constant name="dataDir">$$parentDataDir$$/organismSpecificTopLevel</constant>
  <constant name="genomicSeqsFileForSsa">$$dataDir$$/genomicSeqsForSsa.fsa</constant>
  <constant name="transcriptSeqsFileForSsa">$$dataDir$$/transcriptSeqsForSsa.fsa</constant>
  <constant name="geneModelFileForSsa">$$dataDir$$/geneModelForSsa.txt</constant>
  <constant name="cdsModelFileForSsa">$$dataDir$$/cdsModelForSsa.txt</constant>


  <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <subgraph name="extractFilesForSsa" xmlFile="extractFilesForSsa.xml">
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="useTopLevel">true</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="geneModelFileForSsa">$$geneModelFileForSsa$$</paramValue>
      <paramValue name="cdsModelFileForSsa">$$cdsModelFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="isAnnotatedGenome">$$isAnnotatedGenome$$</paramValue>
      <depends name="makeDataDir"/>
  </subgraph>

  <step name="mirrorToCluster" stepClass="ReFlow::StepClasses::MirrorToComputeCluster">
    <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
    <depends name="extractFilesForSsa"/>
  </step>

  <datasetTemplate class="rnaSeqExperiment">
    <prop name="organismAbbrev"/>

    <subgraph name="${name}_rnaSeq_experiment" xmlFile="rnaSeqOrChipSeqExperiment.xml">
      <paramValue name="projectName">$$projectName$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="experimentName">${name}</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="geneModelFileForSsa">$$geneModelFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa">$$transcriptSeqsFileForSsa$$</paramValue>
      <paramValue name="experimentResourceName">${organismAbbrev}_${name}_rnaSeq_RSRC</paramValue>
      <paramValue name="experimentResourceVersion">${version}</paramValue>
      <paramValue name="limitNU">${limitNU}$</paramValue>
      <paramValue name="variableLengthReads">${hasVariableLengthReads}</paramValue>
      <paramValue name="hasPairedEnds">${hasPairedEnds}</paramValue>
      <paramValue name="hasTimeSeries">${hasTimeSeries}</paramValue>
      <paramValue name="strandSpecific">${isStrandSpecific}</paramValue>
      <paramValue name="numInsertions">${numInsertions}</paramValue>
      <depends name="mirrorToCluster"/>
    </subgraph>

    <subgraph name="${name}_analyze_rnaSeq_experiment" xmlFile="analyzeRnaSeqExperiment.xml">
      <paramValue name="projectName">$$projectName$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="experimentName">${name}</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="hasTimeSeries">${hasTimeSeries}</paramValue>
      <paramValue name="experimentResourceName">${organismAbbrev}_${name}_rnaSeq_RSRC</paramValue>
      <paramValue name="experimentResourceVersion">${version}</paramValue>
      <paramValue name="relativeDownloadSiteDir">$$relativeDownloadSiteDir$$</paramValue>
      <depends name="${name}_rnaSeq_experiment"/>
    </subgraph>


  </datasetTemplate>

  <datasetTemplate class="chipSeqExperiment">
    <prop name="organismAbbrev"/>

    <subgraph name="${name}_chipSeq_experiment" xmlFile="rnaSeqOrChipSeqExperiment.xml">
      <paramValue name="projectName">$$projectName$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="organismResourceXmlFile">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="experimentName">${name}</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <paramValue name="genomeExtDbRlsSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="genomicSeqsFileForSsa">$$genomicSeqsFileForSsa$$</paramValue>
      <paramValue name="geneModelFileForSsa">$$geneModelFileForSsa$$</paramValue>
      <paramValue name="transcriptSeqsFileForSsa"></paramValue>
      <paramValue name="experimentResourceName">${organismAbbrev}_${name}_chipSeq_RSRC</paramValue>
      <paramValue name="experimentResourceVersion">${version}</paramValue>
      <paramValue name="limitNU">${limitNU}$</paramValue>
      <paramValue name="variableLengthReads">${hasVariableLengthReads}</paramValue>
      <paramValue name="hasPairedEnds">${hasPairedEnds}</paramValue>
      <paramValue name="strandSpecific">${isStrandSpecific}</paramValue>
      <paramValue name="numInsertions">${numInsertions}</paramValue>
      <depends name="mirrorToCluster"/>
    </subgraph>

  </datasetTemplate>

</workflowGraph>



