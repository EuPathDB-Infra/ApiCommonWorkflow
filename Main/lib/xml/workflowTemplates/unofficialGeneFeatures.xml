<workflowGraph name="">
  <param name="organismResourceXmlFile"/>
  <param name="parentDataDir"/>

  <constant name="dataDir">$$parentDataDir$$/unofficialGeneFeatures</constant>

  <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

<datasetTemplate class="unofficialGeneFeatures_GFF2">
    <prop name="name"/> 
    <prop name="organismAbbrev"/>
    <subgraph name="unofficialGeneFeature_${name}_GFF2_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">${organismAbbrev}_unofficialGeneFeature_${name}_GFF2_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetTemplate>

 <datasetTemplate class="unofficialGeneFeatures_GFF3">
    <prop name="name"/> 
    <prop name="organismAbbrev"/>
    <subgraph name="unofficialGeneFeature_${name}_GFF3_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">${organismAbbrev}_unofficialGeneFeature_${name}_GFF3_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>
  </datasetTemplate>

</workflowGraph>
