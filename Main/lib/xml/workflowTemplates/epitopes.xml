<workflowGraph name="">
  <param name="parentDataDir"/>
  <param name="organismResourceXmlFile"/>

  <constant name="dataDir">$$parentDataDir$$/epitopes</constant>

  <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <datasetTemplate class="referenceStrain-epitope_sequences_IEDB">
    <prop name="organismAbbrev"/>

    <subgraph name="IEDBResource" xmlFile="loadResource.xml" externalName="${organismAbbrev}_epitope_IEDB_RSRC">
      <paramValue name="resourceName">${organismAbbrev}_epitope_IEDB_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$dataDir$$</paramValue>
      <depends name="makeDataDir"/>
    </subgraph>

  </datasetTemplate>

</workflowGraph>
