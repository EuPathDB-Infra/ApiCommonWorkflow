<workflowGraph name="">
  <param name="organismAbbrev"/>
  <param name="organismResourceXmlFile"/>
  <param name="parentDataDir"/>

  <!-- this is a plan file because loading this is optional -->
  <datasetTemplate class="primaryVirtualGenome">
    <prop name="organismAbbrev"/>
    <subgraph name="primaryVirtualGenome_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">$$organismAbbrev$$_primary_virtual_genome_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$parentDataDir$$</paramValue>
    </subgraph>
  </datasetTemplate>

  <datasetTemplate class="insertScaffoldGapFeatures">
    <prop name="organismAbbrev"/>
    <subgraph name="insertScaffoldGapFeatures_RSRC" xmlFile="loadResource.xml">
      <paramValue name="resourceName">${organismAbbrev}_insertScaffoldGapFeatures_RSRC</paramValue>
      <paramValue name="resourceXmlFileName">$$organismResourceXmlFile$$</paramValue>
      <paramValue name="parentDataDir">$$parentDataDir$$</paramValue>
      <depends name="primaryVirtualGenome_RSRC"/>
    </subgraph>
  </datasetTemplate>

</workflowGraph>
